<Page x:Class="EquipmentManagement.Client.Views.Inventory.InventoryItemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Views.Inventory"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InventoryItemsPage"
      Background="#9EA1A2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button x:Name="BackButton" Content="Назад" Width="60" Height="30" Margin="5"/>
            <TextBlock x:Name="InventoryNameText" Text="" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>
        </StackPanel>

        <DataGrid x:Name="DataGrid" Grid.Row="1" Margin="5" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Оборудование ID" Binding="{Binding EquipmentId}" Width="100"/>
                <DataGridTextColumn Header="Проверил" Binding="{Binding CheckedByUserId}" Width="80"/>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="AddEquipmentButton" Content="Добавить оборудование" Width="150" Height="30" Margin="5"/>
            <Button x:Name="CheckButton" Content="Провести" Width="100" Height="30" Margin="5"/>
            <Button x:Name="RefreshButton" Content="Обновить" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>