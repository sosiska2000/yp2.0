<Page x:Class="EquipmentManagement.Client.Views.Inventory.InventoryEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Views.Inventory"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InventoryEditPage"
      Background="#9EA1A2">

    <Grid>
        <Border Width="500" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="20">
                <TextBlock x:Name="TitleText" Text="Добавление инвентаризации" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Название:"/>
                <TextBox x:Name="NameBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="Дата начала (ДД.ММ.ГГГГ):"/>
                <TextBox x:Name="StartDateBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="Дата окончания (ДД.ММ.ГГГГ):"/>
                <TextBox x:Name="EndDateBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="Создал пользователь (ID):"/>
                <TextBox x:Name="CreatedByUserIdBox" Margin="0,0,0,20" Height="30"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CancelButton" Content="Отмена" Width="80" Height="30" Margin="5"/>
                    <Button x:Name="SaveButton" Content="Сохранить" Width="80" Height="30" Margin="5" Background="#0060AC" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>