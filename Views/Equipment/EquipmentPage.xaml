<Page x:Class="EquipmentManagement.Client.Views.Equipment.EquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Views.Equipment"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EquipmentPage"
      Background="#9EA1A2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button x:Name="BackButton" Content="Назад" Width="60" Height="30" Margin="5"/>
            <TextBox x:Name="SearchBox" Width="200" Height="30" Margin="5"/>
            <Button x:Name="SearchButton" Content="Поиск" Width="60" Height="30" Margin="5"/>
            <ComboBox x:Name="StatusFilterBox" Width="150" Height="30" Margin="5" DisplayMemberPath="Name"/>
            <ComboBox x:Name="ClassroomFilterBox" Width="150" Height="30" Margin="5" DisplayMemberPath="Name"/>
        </StackPanel>

        <DataGrid x:Name="DataGrid" Grid.Row="1" Margin="5" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Инв. номер" Binding="{Binding InventoryNumber}" Width="100"/>
                <DataGridTextColumn Header="Аудитория" Binding="{Binding ClassroomId}" Width="80"/>
                <DataGridTextColumn Header="Ответственный" Binding="{Binding ResponsibleUserId}" Width="80"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost}" Width="80"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusId}" Width="80"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding ModelId}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="AddButton" Content="Добавить" Width="80" Height="30" Margin="5"/>
            <Button x:Name="EditButton" Content="Изменить" Width="80" Height="30" Margin="5"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="80" Height="30" Margin="5"/>
            <Button x:Name="NetworkButton" Content="Сетевые" Width="80" Height="30" Margin="5"/>
            <Button x:Name="SoftwareButton" Content="ПО" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>