<Page x:Class="EquipmentManagement.Client.Views.Equipment.EquipmentEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Views.Equipment"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EquipmentEditPage"
      Background="#9EA1A2">

    <Grid>
        <Border Width="600" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ScrollViewer MaxHeight="500">
                <StackPanel Margin="20">
                    <TextBlock x:Name="TitleText" Text="Добавление оборудования" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Название:"/>
                    <TextBox x:Name="NameBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Инвентарный номер (только цифры):"/>
                    <TextBox x:Name="InventoryNumberBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Аудитория (ID):"/>
                    <TextBox x:Name="ClassroomIdBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Ответственный пользователь (ID):"/>
                    <TextBox x:Name="ResponsibleUserIdBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Временный ответственный (ID):"/>
                    <TextBox x:Name="TempResponsibleUserIdBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Стоимость:"/>
                    <TextBox x:Name="CostBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Направление (ID):"/>
                    <TextBox x:Name="DirectionIdBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Статус (ID):"/>
                    <TextBox x:Name="StatusIdBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Модель (ID):"/>
                    <TextBox x:Name="ModelIdBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Путь к фото:"/>
                    <TextBox x:Name="PhotoPathBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Комментарий:"/>
                    <TextBox x:Name="CommentBox" Margin="0,0,0,20" Height="60" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="CancelButton" Content="Отмена" Width="80" Height="30" Margin="5"/>
                        <Button x:Name="SaveButton" Content="Сохранить" Width="80" Height="30" Margin="5" Background="#0060AC" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>