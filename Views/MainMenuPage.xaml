<Page x:Class="EquipmentManagement.Client.Views.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage"
      Background="#9EA1A2">

    <ScrollViewer>
        <StackPanel Margin="10">
            <TextBlock Text="УПРАВЛЕНИЕ СПРАВОЧНИКАМИ" FontWeight="Bold" FontSize="16" Foreground="White" Margin="0,10"/>
            <WrapPanel>
                <Button Content="Аудитории" Width="150" Height="40" Margin="5" Background="#0060AC" Foreground="White" Tag="Classrooms"/>
                <Button Content="Направления" Width="150" Height="40" Margin="5" Background="#0060AC" Foreground="White" Tag="Directions"/>
                <Button Content="Статусы" Width="150" Height="40" Margin="5" Background="#0060AC" Foreground="White" Tag="Statuses"/>
                <Button Content="Типы оборудования" Width="150" Height="40" Margin="5" Background="#0060AC" Foreground="White" Tag="EquipmentTypes"/>
                <Button Content="Модели" Width="150" Height="40" Margin="5" Background="#0060AC" Foreground="White" Tag="Models"/>
                <Button Content="Разработчики ПО" Width="150" Height="40" Margin="5" Background="#0060AC" Foreground="White" Tag="SoftwareDevelopers"/>
                <Button Content="Программы" Width="150" Height="40" Margin="5" Background="#0060AC" Foreground="White" Tag="Software"/>
                <Button Content="Типы расходников" Width="150" Height="40" Margin="5" Background="#0060AC" Foreground="White" Tag="ConsumableTypes"/>
            </WrapPanel>

            <TextBlock Text="УПРАВЛЕНИЕ ОСНОВНЫМИ СУЩНОСТЯМИ" FontWeight="Bold" FontSize="16" Foreground="White" Margin="0,20,0,10"/>
            <WrapPanel>
                <Button Content="Пользователи" Width="150" Height="40" Margin="5" Background="#E41613" Foreground="White" Tag="Users"/>
                <Button Content="Оборудование" Width="150" Height="40" Margin="5" Background="#E41613" Foreground="White" Tag="Equipment"/>
                <Button Content="Расходные материалы" Width="150" Height="40" Margin="5" Background="#E41613" Foreground="White" Tag="Consumables"/>
                <Button Content="Инвентаризация" Width="150" Height="40" Margin="5" Background="#E41613" Foreground="White" Tag="Inventories"/>
                <Button Content="Сетевые настройки" Width="150" Height="40" Margin="5" Background="#E41613" Foreground="White" Tag="NetworkSettings"/>
            </WrapPanel>

            <Button Content="ВЫХОД" Width="100" Height="40" Margin="5" HorizontalAlignment="Left" Background="Gray" Foreground="White" Tag="Logout"/>
        </StackPanel>
    </ScrollViewer>
</Page>