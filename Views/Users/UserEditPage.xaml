<Page x:Class="EquipmentManagement.Client.Views.Users.UserEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Views.Users"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserEditPage"
      Background="#9EA1A2">

    <Grid>
        <Border Width="500" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ScrollViewer MaxHeight="500">
                <StackPanel Margin="20">
                    <TextBlock x:Name="TitleText" Text="Добавление пользователя" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Логин*:"/>
                    <TextBox x:Name="LoginBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Пароль*:"/>
                    <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Роль:"/>
                    <ComboBox x:Name="RoleBox" Margin="0,0,0,10" Height="30">
                        <ComboBoxItem Content="admin"/>
                        <ComboBoxItem Content="teacher"/>
                        <ComboBoxItem Content="employee"/>
                    </ComboBox>

                    <TextBlock Text="Фамилия*:"/>
                    <TextBox x:Name="LastNameBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Имя:"/>
                    <TextBox x:Name="FirstNameBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Отчество:"/>
                    <TextBox x:Name="MiddleNameBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Email:"/>
                    <TextBox x:Name="EmailBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Телефон:"/>
                    <TextBox x:Name="PhoneBox" Margin="0,0,0,10" Height="30"/>

                    <TextBlock Text="Адрес:"/>
                    <TextBox x:Name="AddressBox" Margin="0,0,0,20" Height="60" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="CancelButton" Content="Отмена" Width="80" Height="30" Margin="5"/>
                        <Button x:Name="SaveButton" Content="Сохранить" Width="80" Height="30" Margin="5" Background="#0060AC" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>