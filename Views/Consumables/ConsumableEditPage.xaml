<Page x:Class="EquipmentManagement.Client.Views.Consumables.ConsumableEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Views.Consumables"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConsumableEditPage"
      Background="#9EA1A2">

    <Grid>
        <Border Width="500" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="20">
                <TextBlock x:Name="TitleText" Text="Добавление расходного материала" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Название:"/>
                <TextBox x:Name="NameBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="Описание:"/>
                <TextBox x:Name="DescriptionBox" Margin="0,0,0,10" Height="60" TextWrapping="Wrap"/>

                <TextBlock Text="Дата поступления (ДД.ММ.ГГГГ):"/>
                <TextBox x:Name="ReceiptDateBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="Количество:"/>
                <TextBox x:Name="QuantityBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="Тип расходного материала (ID):"/>
                <TextBox x:Name="ConsumableTypeIdBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="Ответственный пользователь (ID):"/>
                <TextBox x:Name="ResponsibleUserIdBox" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="Временный ответственный (ID):"/>
                <TextBox x:Name="TempResponsibleUserIdBox" Margin="0,0,0,20" Height="30"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CancelButton" Content="Отмена" Width="80" Height="30" Margin="5"/>
                    <Button x:Name="SaveButton" Content="Сохранить" Width="80" Height="30" Margin="5" Background="#0060AC" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>