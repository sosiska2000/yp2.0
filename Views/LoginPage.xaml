<Page x:Class="EquipmentManagement.Client.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      Background="#9EA1A2">

    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
            <Border Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Логин" Margin="0,5"/>
                    <TextBox x:Name="LoginBox" Height="35" Padding="5"/>

                    <TextBlock Text="Пароль" Margin="0,10,0,5"/>
                    <PasswordBox x:Name="PasswordBox" Height="35" Padding="5"/>

                    <Button x:Name="LoginButton" Content="Войти" Height="40" Margin="0,20,0,0" 
                            Background="#0060AC" Foreground="White" FontSize="16"/>

                    <TextBlock x:Name="ErrorText" Text="" Foreground="#E41613" HorizontalAlignment="Center" Margin="0,10"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>