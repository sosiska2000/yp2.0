<Page x:Class="EquipmentManagement.Client.Pages.NetworkSettings.NetworkSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.NetworkSettings"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Сетевые настройки оборудования">

    <Page.Resources>
        <!-- Цветовая палитра по ТЗ -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0060AC"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E41613"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#9EA1A2"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="White" Color="White"/>
        <SolidColorBrush x:Key="DarkGray" Color="#333333"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="NetworkActiveColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="NetworkInactiveColor" Color="#757575"/>

        <!-- Стиль основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0077CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль вторичной кнопки -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        </Style>

        <!-- Стиль кнопки "Назад" -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Стиль для поля поиска -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"/>
                                <TextBlock Text="Поиск по IP-адресу или оборудованию..." 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="12,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек сетевых настроек -->
        <Style x:Key="NetworkCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для тегов статуса сети -->
        <Style x:Key="NetworkStatusTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Стиль для IP-адресов -->
        <Style x:Key="IPTagStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource HoverBlue}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,6,6"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource White}" 
                Height="70" 
                VerticalAlignment="Top"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🌐" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="СЕТЕВЫЕ НАСТРОЙКИ" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBlue}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="(1.10)" 
                               FontSize="12" 
                               Foreground="{StaticResource NeutralGray}"
                               VerticalAlignment="Bottom"
                               Margin="5,0,0,2"/>
                </StackPanel>

                <!-- Панель поиска и сортировки -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <!-- Поле поиска -->
                    <TextBox x:Name="search" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             Width="300"
                             Height="38"
                             KeyDown="KeyDown_Search"/>

                    <!-- Кнопки сортировки -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="btnSortUp"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▲"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Click="SortUp"
                                ToolTip="Сортировка по IP-адресу"/>

                        <Button x:Name="btnSortDown"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▼"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Margin="5,0,0,0"
                                Click="SortDown"
                                ToolTip="Сортировка по оборудованию"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка "Назад" -->
                <Button Grid.Column="2"
                        Style="{StaticResource BackButtonStyle}"
                        Click="Back"
                        Content="← Назад"
                        Width="100"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,80,20,70">
            <StackPanel x:Name="parent">

                <!-- Пример сетевых настроек -->
                <Border Style="{StaticResource NetworkCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Информация о сетевых настройках -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Сетевые настройки сервера" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,10"/>

                            <!-- Оборудование -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Оборудование:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Сервер Dell PowerEdge R740" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource PrimaryBlue}"/>
                            </StackPanel>

                            <!-- IP-адрес и статус -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Style="{StaticResource IPTagStyle}">
                                    <TextBlock Text="IP: 192.168.1.100" 
                                               FontSize="12"/>
                                </Border>

                                <Border Style="{StaticResource NetworkStatusTagStyle}"
                                        Background="#E8F5E9">
                                    <TextBlock Text="ОНЛАЙН" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource NetworkActiveColor}"/>
                                </Border>
                            </StackPanel>

                            <!-- Детали настроек -->
                            <StackPanel>
                                <TextBlock Text="Сетевые параметры:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource IPTagStyle}">
                                        <TextBlock Text="Маска: 255.255.255.0" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource IPTagStyle}">
                                        <TextBlock Text="Шлюз: 192.168.1.1" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource IPTagStyle}">
                                        <TextBlock Text="DNS1: 8.8.8.8" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource IPTagStyle}">
                                        <TextBlock Text="DNS2: 8.8.4.4" 
                                                   FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Кнопки действий -->
                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Проверить сеть"
                                    Width="140"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Редактировать"
                                    Width="140"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Удалить"
                                    Width="140"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Еще пример -->
                <Border Style="{StaticResource NetworkCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Настройки рабочей станции" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Оборудование:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="ПК преподавателя №15" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource PrimaryBlue}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Style="{StaticResource IPTagStyle}">
                                    <TextBlock Text="IP: 192.168.1.150" 
                                               FontSize="12"/>
                                </Border>

                                <Border Style="{StaticResource NetworkStatusTagStyle}"
                                        Background="#FFEBEE">
                                    <TextBlock Text="ОФФЛАЙН" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentRed}"/>
                                </Border>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Сетевые параметры:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource IPTagStyle}">
                                        <TextBlock Text="Маска: 255.255.255.0" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource IPTagStyle}">
                                        <TextBlock Text="Шлюз: 192.168.1.1" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource IPTagStyle}">
                                        <TextBlock Text="DNS: 192.168.1.100" 
                                                   FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Проверить сеть"
                                    Width="140"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Редактировать"
                                    Width="140"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Удалить"
                                    Width="140"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель с информацией -->
        <Border Background="{StaticResource White}" 
                Height="60" 
                VerticalAlignment="Bottom"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,1,0,0">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о количестве -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Всего настроек:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="2" 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Онлайн:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="1" 
                               FontWeight="Medium"
                               Foreground="{StaticResource NetworkActiveColor}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Оффлайн:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="1" 
                               FontWeight="Medium"
                               Foreground="{StaticResource AccentRed}"/>
                </StackPanel>

                <!-- Кнопка добавления -->
                <Button Grid.Column="1"
                        x:Name="addBtn"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Add"
                        Content="+ Добавить настройки"
                        Width="200"
                        Height="38"
                        Visibility="Hidden"/>
            </Grid>
        </Border>

        <!-- Сообщение при пустом списке -->
        <Border x:Name="emptyMessage"
                Visibility="Collapsed"
                Background="{StaticResource White}"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="280">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="20">

                <TextBlock Text="🌐" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Сетевые настройки оборудования" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkGray}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Добавляйте сетевые настройки для оборудования с сетевыми интерфейсами." 
                           FontSize="13" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="По ТЗ: у одного оборудования может быть несколько сетевых настроек, IP адреса не должны повторяться, реализована проверка устройств в сети" 
                           FontSize="12" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           FontStyle="Italic"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Добавить первые настройки"
                        Width="220"
                        Height="38"
                        Margin="0,10,0,0"
                        Click="Add"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
