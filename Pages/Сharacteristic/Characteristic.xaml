<Page x:Class="EquipmentManagement.Client.Pages.Сharacteristic.Characteristic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.Сharacteristic"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Характеристики расходных материалов">

    <Page.Resources>
        <!-- Цветовая палитра по ТЗ -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0060AC"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E41613"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#9EA1A2"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="White" Color="White"/>
        <SolidColorBrush x:Key="DarkGray" Color="#333333"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="TableHeader" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA"/>

        <!-- Стиль основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0077CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль вторичной кнопки -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        </Style>

        <!-- Стиль кнопки "Назад" -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Стиль поля поиска -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"/>
                                <TextBlock Text="Поиск по названию..." 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="12,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек характеристик -->
        <Style x:Key="CharacteristicCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для тегов типов расходных материалов -->
        <Style x:Key="ConsumableTypeTagStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource HoverBlue}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,5"/>
        </Style>

        <!-- Стиль для значений характеристик -->
        <Style x:Key="ValueTagStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,5,5"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource White}" 
                Height="70" 
                VerticalAlignment="Top"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📋" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="ХАРАКТЕРИСТИКИ" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBlue}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="(1.12)" 
                               FontSize="12" 
                               Foreground="{StaticResource NeutralGray}"
                               VerticalAlignment="Bottom"
                               Margin="5,0,0,2"/>
                </StackPanel>

                <!-- Панель поиска и сортировки -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <!-- Поле поиска -->
                    <TextBox x:Name="search" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             Width="300"
                             Height="38"
                             KeyDown="KeyDown_Search"/>

                    <!-- Кнопки сортировки -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="btnSortUp"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▲"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Click="SortUp"
                                ToolTip="Сортировка по возрастанию"/>

                        <Button x:Name="btnSortDown"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▼"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Margin="5,0,0,0"
                                Click="SortDown"
                                ToolTip="Сортировка по убыванию"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка "Назад" -->
                <Button Grid.Column="2"
                        Style="{StaticResource BackButtonStyle}"
                        Click="Back"
                        Content="← Назад"
                        Width="100"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,80,20,70">
            <StackPanel x:Name="parent">

                <!-- Пример карточки характеристики -->
                <Border Style="{StaticResource CharacteristicCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Информация о характеристике -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Цвет" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,10"/>

                            <!-- Типы расходных материалов -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Для типов:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource ConsumableTypeTagStyle}">
                                        <TextBlock Text="Картридж" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource PrimaryBlue}"/>
                                    </Border>
                                    <Border Style="{StaticResource ConsumableTypeTagStyle}">
                                        <TextBlock Text="Бумага" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource PrimaryBlue}"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>

                            <!-- Возможные значения -->
                            <StackPanel>
                                <TextBlock Text="Возможные значения:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource ValueTagStyle}">
                                        <TextBlock Text="Черный" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource ValueTagStyle}">
                                        <TextBlock Text="Цветной" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource ValueTagStyle}">
                                        <TextBlock Text="Монохромный" 
                                                   FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Кнопки действий -->
                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Редактировать"
                                    Width="120"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Удалить"
                                    Width="120"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Еще пример -->
                <Border Style="{StaticResource CharacteristicCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Объем" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Для типов:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource ConsumableTypeTagStyle}">
                                        <TextBlock Text="Картридж" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource PrimaryBlue}"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Возможные значения:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource ValueTagStyle}">
                                        <TextBlock Text="100 мл" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource ValueTagStyle}">
                                        <TextBlock Text="250 мл" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource ValueTagStyle}">
                                        <TextBlock Text="500 мл" 
                                                   FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Редактировать"
                                    Width="120"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Удалить"
                                    Width="120"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Пример для компьютерных мышей -->
                <Border Style="{StaticResource CharacteristicCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Тип подключения" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Для типов:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource ConsumableTypeTagStyle}">
                                        <TextBlock Text="Компьютерная мышь" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource PrimaryBlue}"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Возможные значения:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource ValueTagStyle}">
                                        <TextBlock Text="Проводная" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource ValueTagStyle}">
                                        <TextBlock Text="Беспроводная" 
                                                   FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Редактировать"
                                    Width="120"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Удалить"
                                    Width="120"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель с информацией -->
        <Border Background="{StaticResource White}" 
                Height="60" 
                VerticalAlignment="Bottom"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,1,0,0">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о количестве -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Всего характеристик:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="3" 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Связано с типами:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="3" 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>
                </StackPanel>

                <!-- Кнопка добавления -->
                <Button Grid.Column="1"
                        x:Name="addBtn"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Add"
                        Content="+ Добавить характеристику"
                        Width="200"
                        Height="38"
                        Visibility="Hidden"/>
            </Grid>
        </Border>

        <!-- Сообщение при пустом списке -->
        <Border x:Name="emptyMessage"
                Visibility="Collapsed"
                Background="{StaticResource White}"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="250">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="20">

                <TextBlock Text="📝" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Характеристики расходных материалов" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkGray}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Добавляйте характеристики для разных типов расходных материалов." 
                           FontSize="13" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Пример: для 'Картридж' - 'Цвет', 'Объем'; для 'Мышь' - 'Тип подключения', 'Цвет'" 
                           FontSize="12" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           FontStyle="Italic"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Добавить первую характеристику"
                        Width="220"
                        Height="38"
                        Margin="0,20,0,0"
                        Click="Add"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
