<Page x:Class="EquipmentManagement.Client.Pages.ViewModel.ViewModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Вид модели оборудования">

    <Page.Resources>
        <!-- Цветовая палитра по ТЗ -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0060AC"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E41613"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#9EA1A2"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="White" Color="White"/>
        <SolidColorBrush x:Key="DarkGray" Color="#333333"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="ModelTypeColor1" Color="#2196F3"/>
        <SolidColorBrush x:Key="ModelTypeColor2" Color="#4CAF50"/>
        <SolidColorBrush x:Key="ModelTypeColor3" Color="#FF9800"/>

        <!-- Стиль основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0077CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль вторичной кнопки -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        </Style>

        <!-- Стиль кнопки "Назад" -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Стиль для поля поиска -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"/>
                                <TextBlock Text="Поиск по названию модели или коду типа..." 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="12,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек моделей -->
        <Style x:Key="ModelCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для тегов типа оборудования -->
        <Style x:Key="EquipmentTypeTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Стиль для тегов характеристик -->
        <Style x:Key="FeatureTagStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource HoverBlue}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,6,6"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource White}" 
                Height="70" 
                VerticalAlignment="Top"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🖥️" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="ВИД МОДЕЛИ ОБОРУДОВАНИЯ" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBlue}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="(1.5)" 
                               FontSize="12" 
                               Foreground="{StaticResource NeutralGray}"
                               VerticalAlignment="Bottom"
                               Margin="5,0,0,2"/>
                </StackPanel>

                <!-- Панель поиска и сортировки -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <!-- Поле поиска -->
                    <TextBox x:Name="search" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             Width="300"
                             Height="38"
                             KeyDown="KeyDown_Search"/>

                    <!-- Кнопки сортировки -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="btnSortUp"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▲"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Click="SortUp"
                                ToolTip="Сортировка по названию (А-Я)"/>

                        <Button x:Name="btnSortDown"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▼"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Margin="5,0,0,0"
                                Click="SortDown"
                                ToolTip="Сортировка по названию (Я-А)"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка "Назад" -->
                <Button Grid.Column="2"
                        Style="{StaticResource BackButtonStyle}"
                        Click="Back"
                        Content="← Назад"
                        Width="100"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,80,20,70">
            <StackPanel x:Name="parent">

                <!-- Пример вида модели -->
                <Border Style="{StaticResource ModelCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Информация о модели -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Lenovo ThinkPad T590" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,10"/>

                            <!-- Тип оборудования -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Тип оборудования:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>

                                <Border Style="{StaticResource EquipmentTypeTagStyle}"
                                        Background="#E3F2FD">
                                    <TextBlock Text="НОУТБУК" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ModelTypeColor1}"/>
                                </Border>

                                <TextBlock Text="Код типа:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="20,0,5,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="NB-001" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource PrimaryBlue}"/>
                            </StackPanel>

                            <!-- Описание -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Описание:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Бизнес-ноутбук с процессором Intel Core i7, 16 ГБ оперативной памяти, SSD 512 ГБ, экран 15.6 дюймов" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Ключевые характеристики -->
                            <StackPanel>
                                <TextBlock Text="Ключевые характеристики:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource FeatureTagStyle}">
                                        <TextBlock Text="Процессор: i7-8565U" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource FeatureTagStyle}">
                                        <TextBlock Text="ОЗУ: 16 ГБ" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource FeatureTagStyle}">
                                        <TextBlock Text="SSD: 512 ГБ" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource FeatureTagStyle}">
                                        <TextBlock Text="Экран: 15.6″" 
                                                   FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Кнопки действий -->
                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Редактировать"
                                    Width="120"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Удалить"
                                    Width="120"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Еще пример -->
                <Border Style="{StaticResource ModelCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="HP LaserJet Pro M428fdw" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Тип оборудования:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>

                                <Border Style="{StaticResource EquipmentTypeTagStyle}"
                                        Background="#FFF3E0">
                                    <TextBlock Text="ПРИНТЕР" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ModelTypeColor3}"/>
                                </Border>

                                <TextBlock Text="Код типа:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="20,0,5,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="PR-003" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource PrimaryBlue}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Описание:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Многофункциональное лазерное устройство с функцией печати, сканирования, копирования и факса" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Ключевые характеристики:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource FeatureTagStyle}">
                                        <TextBlock Text="Тип: лазерный МФУ" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource FeatureTagStyle}">
                                        <TextBlock Text="Скорость: 28 стр/мин" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource FeatureTagStyle}">
                                        <TextBlock Text="Wi-Fi: есть" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource FeatureTagStyle}">
                                        <TextBlock Text="Дуплекс: есть" 
                                                   FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Редактировать"
                                    Width="120"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Удалить"
                                    Width="120"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель с информацией -->
        <Border Background="{StaticResource White}" 
                Height="60" 
                VerticalAlignment="Bottom"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,1,0,0">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о количестве -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Всего моделей:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="2" 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Типы оборудования:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="2" 
                               FontWeight="Medium"
                               Foreground="{StaticResource ModelTypeColor1}"/>
                </StackPanel>

                <!-- Кнопка добавления -->
                <Button Grid.Column="1"
                        x:Name="addBtn"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Add"
                        Content="+ Добавить модель"
                        Width="200"
                        Height="38"
                        Visibility="Hidden"/>
            </Grid>
        </Border>

        <!-- Сообщение при пустом списке -->
        <Border x:Name="emptyMessage"
                Visibility="Collapsed"
                Background="{StaticResource White}"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="280">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="20">

                <TextBlock Text="🖥️" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Вид модели оборудования" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkGray}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Добавляйте виды моделей оборудования для сортировки и классификации." 
                           FontSize="13" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="По ТЗ: модель имеет наименование и код типа, к которому относится, используется для сортировки оборудования" 
                           FontSize="12" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           FontStyle="Italic"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Добавить первую модель"
                        Width="220"
                        Height="38"
                        Margin="0,10,0,0"
                        Click="Add"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
