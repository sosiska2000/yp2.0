<Page x:Class="EquipmentManagement.Client.Pages.ResponsibleHistory.ResponsibleHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.ResponsibleHistory"
      mc:Ignorable="d" d:DesignWidth="1200"
      Title="История ответственных (расходные материалы)" Height="1373">

    <Page.Resources>
        <!-- Цветовая палитра по ТЗ -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0060AC"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E41613"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#9EA1A2"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="White" Color="White"/>
        <SolidColorBrush x:Key="DarkGray" Color="#333333"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="CurrentResponsibleColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="PreviousResponsibleColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="TempResponsibleColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="ConsumableColor" Color="#9C27B0"/>

        <!-- Стиль основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0077CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль кнопки "Назад" -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Стиль для карточек истории -->
        <Style x:Key="HistoryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Стиль для информации о расходнике -->
        <Style x:Key="ConsumableInfoStyle" TargetType="Border">
            <Setter Property="Background" Value="#F3E5F5"/>
            <Setter Property="BorderBrush" Value="{StaticResource ConsumableColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Стиль для текущего ответственного -->
        <Style x:Key="CurrentResponsibleStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="{StaticResource CurrentResponsibleColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для временно ответственных -->
        <Style x:Key="TempResponsibleStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderBrush" Value="{StaticResource TempResponsibleColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для предыдущих ответственных -->
        <Style x:Key="PreviousResponsibleStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для тегов характеристик -->
        <Style x:Key="CharacteristicTagStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource HoverBlue}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource White}" 
                Height="70" 
                VerticalAlignment="Top"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="ИСТОРИЯ ОТВЕТСТВЕННЫХ" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBlue}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="(1.11)" 
                               FontSize="12" 
                               Foreground="{StaticResource NeutralGray}"
                               VerticalAlignment="Bottom"
                               Margin="5,0,0,2"/>
                </StackPanel>

                <!-- Информация о расходном материале -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <Border Background="{StaticResource HoverBlue}"
                            CornerRadius="6"
                            Padding="12,8"
                            Margin="0,0,10,0">
                        <TextBlock Text="Картридж для принтера HP" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DarkGray}"/>
                    </Border>

                    <Border Background="{StaticResource HoverBlue}"
                            CornerRadius="6"
                            Padding="12,8">
                        <TextBlock Text="Тип: Картридж • Код: CTG-2023-001" 
                                   FontSize="14" 
                                   Foreground="{StaticResource DarkGray}"/>
                    </Border>
                </StackPanel>

                <!-- Кнопка "Назад" -->
                <Button Grid.Column="2"
                        Style="{StaticResource BackButtonStyle}"
                        Click="Back"
                        Content="← Назад"
                        Width="100"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,80,20,20">
            <StackPanel x:Name="parent">

                <!-- Информация о расходном материале -->
                <Border Style="{StaticResource HistoryCardStyle}">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="📄 Информация о расходном материале" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DarkGray}"
                                   Margin="0,0,0,16"/>

                        <Border Grid.Row="1" Style="{StaticResource ConsumableInfoStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Иконка расходника -->
                                <Border Grid.Column="0" 
                                        Width="60" 
                                        Height="60" 
                                        Background="{StaticResource ConsumableColor}"
                                        CornerRadius="8"
                                        Margin="0,0,20,0">
                                    <TextBlock Text="🖨️" 
                                               FontSize="28" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Детальная информация -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Картридж HP LaserJet Pro M404/M405" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource DarkGray}"
                                               Margin="0,0,0,8"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Количество на складе: " 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="15 шт" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource ConsumableColor}"/>

                                        <TextBlock Text=" • " 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="10,0,10,0"/>

                                        <TextBlock Text="Дата поступления: " 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="21.08.2023" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkGray}"/>
                                    </StackPanel>

                                    <!-- Характеристики -->
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="Характеристики:" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,0,6"/>

                                        <WrapPanel>
                                            <Border Style="{StaticResource CharacteristicTagStyle}">
                                                <TextBlock Text="Цвет: Черный" 
                                                           FontSize="12"/>
                                            </Border>
                                            <Border Style="{StaticResource CharacteristicTagStyle}">
                                                <TextBlock Text="Ресурс: 5000 стр" 
                                                           FontSize="12"/>
                                            </Border>
                                            <Border Style="{StaticResource CharacteristicTagStyle}">
                                                <TextBlock Text="Совместимость: HP M404/M405" 
                                                           FontSize="12"/>
                                            </Border>
                                        </WrapPanel>
                                    </StackPanel>

                                    <TextBlock Text="Для принтеров: HP LaserJet Pro M404, M405, M406, M407" 
                                               FontSize="13" 
                                               Foreground="{StaticResource NeutralGray}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Текущий ответственный -->
                <Border Style="{StaticResource HistoryCardStyle}">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="✅ Текущий ответственный пользователь" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DarkGray}"
                                   Margin="0,0,0,16"/>

                        <Border Grid.Row="1" Style="{StaticResource CurrentResponsibleStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Аватар пользователя -->
                                <Border Grid.Column="0" 
                                        Width="50" 
                                        Height="50" 
                                        Background="{StaticResource PrimaryBlue}"
                                        CornerRadius="25"
                                        Margin="0,0,16,0">
                                    <TextBlock Text="СС" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource White}"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Информация о пользователе -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Сидоров Сергей Сергеевич" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource DarkGray}"
                                               Margin="0,0,0,6"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Завхоз учебного корпуса" 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource DarkGray}"
                                                   Margin="0,0,16,0"/>

                                        <TextBlock Text="•" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,16,0"/>

                                        <TextBlock Text="sidorov@example.com" 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource PrimaryBlue}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Ответственный с: " 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="15.09.2023" 
                                                   FontSize="13" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource DarkGray}"/>

                                        <TextBlock Text=" • " 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="10,0,10,0"/>

                                        <TextBlock Text="Остаток под контролем: " 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="15 шт" 
                                                   FontSize="13" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource CurrentResponsibleColor}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Временный ответственный (если есть) -->
                <Border Style="{StaticResource HistoryCardStyle}">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="⏱️ Временно ответственный" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DarkGray}"
                                   Margin="0,0,0,16"/>

                        <Border Grid.Row="1" Style="{StaticResource TempResponsibleStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Width="50" 
                                        Height="50" 
                                        Background="{StaticResource TempResponsibleColor}"
                                        CornerRadius="25"
                                        Margin="0,0,16,0">
                                    <TextBlock Text="ПП" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource White}"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Петров Петр Петрович" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource DarkGray}"
                                               Margin="0,0,0,6"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Лаборант компьютерного класса" 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource DarkGray}"
                                                   Margin="0,0,16,0"/>

                                        <TextBlock Text="•" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,16,0"/>

                                        <TextBlock Text="Временно закреплен" 
                                                   FontSize="14" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TempResponsibleColor}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Период: " 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="01.11.2023 - 30.11.2023" 
                                                   FontSize="13" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource DarkGray}"/>

                                        <TextBlock Text=" • " 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="10,0,10,0"/>

                                        <TextBlock Text="Выдано под ответств.: " 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="5 шт" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource DarkGray}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- История предыдущих ответственных -->
                <Border Style="{StaticResource HistoryCardStyle}">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="📜 История ответственных пользователей" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DarkGray}"
                                   Margin="0,0,0,16"/>

                        <StackPanel Grid.Row="1">

                            <!-- Предыдущий ответственный -->
                            <Border Style="{StaticResource PreviousResponsibleStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" 
                                            Width="40" 
                                            Height="40" 
                                            Background="{StaticResource PreviousResponsibleColor}"
                                            CornerRadius="20"
                                            Margin="0,0,16,0">
                                        <TextBlock Text="ИИ" 
                                                   FontSize="14" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource White}"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Иванов Иван Иванович" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkGray}"
                                                   Margin="0,0,0,4"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <TextBlock Text="01.06.2023 - 14.09.2023" 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource DarkGray}"
                                                       Margin="0,0,16,0"/>

                                            <TextBlock Text="•" 
                                                       Foreground="{StaticResource NeutralGray}"
                                                       Margin="0,0,16,0"/>

                                            <TextBlock Text="3 месяца 14 дней" 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource NeutralGray}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Количество под контролем: " 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource NeutralGray}"
                                                       Margin="0,0,5,0"/>
                                            <TextBlock Text="20 шт" 
                                                       FontSize="13" 
                                                       FontWeight="Medium"
                                                       Foreground="{StaticResource DarkGray}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Content="Детали"
                                            Width="100"
                                            Height="32"
                                            FontSize="12"/>
                                </Grid>
                            </Border>

                            <!-- Еще один предыдущий ответственный -->
                            <Border Style="{StaticResource PreviousResponsibleStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" 
                                            Width="40" 
                                            Height="40" 
                                            Background="{StaticResource PreviousResponsibleColor}"
                                            CornerRadius="20"
                                            Margin="0,0,16,0">
                                        <TextBlock Text="КК" 
                                                   FontSize="14" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource White}"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Кузнецов Константин Константинович" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkGray}"
                                                   Margin="0,0,0,4"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <TextBlock Text="15.01.2023 - 31.05.2023" 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource DarkGray}"
                                                       Margin="0,0,16,0"/>

                                            <TextBlock Text="•" 
                                                       Foreground="{StaticResource NeutralGray}"
                                                       Margin="0,0,16,0"/>

                                            <TextBlock Text="4 месяца 17 дней" 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource NeutralGray}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Израсходовано за период: " 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource NeutralGray}"
                                                       Margin="0,0,5,0"/>
                                            <TextBlock Text="8 шт" 
                                                       FontSize="13" 
                                                       FontWeight="Medium"
                                                       Foreground="{StaticResource DarkGray}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Content="Детали"
                                            Width="100"
                                            Height="32"
                                            FontSize="12"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Статистика по расходникам -->
                <Border Style="{StaticResource HistoryCardStyle}">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="📊 Статистика по расходному материалу" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DarkGray}"
                                   Margin="0,0,0,16"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Всего ответственных -->
                            <Border Grid.Column="0" 
                                    Background="{StaticResource CardBackground}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="3" 
                                               FontSize="28" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBlue}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="всего ответственных" 
                                               FontSize="13" 
                                               Foreground="{StaticResource NeutralGray}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Среднее время ответств. -->
                            <Border Grid.Column="1" 
                                    Background="{StaticResource CardBackground}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="5,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="3.4 мес" 
                                               FontSize="28" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource PreviousResponsibleColor}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="среднее время" 
                                               FontSize="13" 
                                               Foreground="{StaticResource NeutralGray}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Всего израсходовано -->
                            <Border Grid.Column="2" 
                                    Background="{StaticResource CardBackground}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="5,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="8 шт" 
                                               FontSize="28" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource AccentRed}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="израсходовано" 
                                               FontSize="13" 
                                               Foreground="{StaticResource NeutralGray}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Текущий остаток -->
                            <Border Grid.Column="3" 
                                    Background="{StaticResource CardBackground}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="10,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="15 шт" 
                                               FontSize="28" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource CurrentResponsibleColor}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="текущий остаток" 
                                               FontSize="13" 
                                               Foreground="{StaticResource NeutralGray}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Сообщение при отсутствии истории -->
        <Border x:Name="emptyMessage"
                Visibility="Collapsed"
                Background="{StaticResource White}"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="250">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="20">

                <TextBlock Text="📦" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="История ответственных отсутствует" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkGray}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Расходный материал еще не был закреплен за пользователями." 
                           FontSize="13" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="История будет автоматически обновляться при назначении ответственных." 
                           FontSize="12" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           FontStyle="Italic"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
