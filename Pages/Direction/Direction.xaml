<Page x:Class="EquipmentManagement.Client.Pages.Direction.Direction"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.Direction"
      mc:Ignorable="d" d:DesignWidth="1200"
      Title="Направления подготовки" Height="807">

    <Page.Resources>
        <!-- Цветовая палитра по ТЗ -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0060AC"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E41613"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#9EA1A2"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="White" Color="White"/>
        <SolidColorBrush x:Key="DarkGray" Color="#333333"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="DirectionTagColor1" Color="#4CAF50"/>
        <SolidColorBrush x:Key="DirectionTagColor2" Color="#2196F3"/>
        <SolidColorBrush x:Key="DirectionTagColor3" Color="#FF9800"/>
        <SolidColorBrush x:Key="DirectionTagColor4" Color="#9C27B0"/>

        <!-- Стиль основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0077CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль вторичной кнопки -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        </Style>

        <!-- Стиль кнопки "Назад" -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Стиль для поля поиска -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"/>
                                <TextBlock Text="Поиск по коду или названию..." 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="12,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек направлений -->
        <Style x:Key="DirectionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для тегов уровня подготовки -->
        <Style x:Key="LevelTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Стиль для тегов групп направлений -->
        <Style x:Key="GroupTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,6,6"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource White}" 
                Height="70" 
                VerticalAlignment="Top"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎓" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="НАПРАВЛЕНИЯ ПОДГОТОВКИ" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBlue}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="(x.x)" 
                               FontSize="12" 
                               Foreground="{StaticResource NeutralGray}"
                               VerticalAlignment="Bottom"
                               Margin="5,0,0,2"/>
                </StackPanel>

                <!-- Панель поиска и сортировки -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <!-- Поле поиска -->
                    <TextBox x:Name="search" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             Width="300"
                             Height="38"
                             KeyDown="KeyDown_Search"/>

                    <!-- Кнопки сортировки -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="btnSortUp"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▲"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Click="SortUp"
                                ToolTip="Сортировка по названию (А-Я)"/>

                        <Button x:Name="btnSortDown"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▼"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Margin="5,0,0,0"
                                Click="SortDown"
                                ToolTip="Сортировка по названию (Я-А)"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка "Назад" -->
                <Button Grid.Column="2"
                        Style="{StaticResource BackButtonStyle}"
                        Click="Back"
                        Content="← Назад"
                        Width="100"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,80,20,70">
            <StackPanel x:Name="parent">

                <!-- Пример направления -->
                <Border Style="{StaticResource DirectionCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Информация о направлении -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="09.03.01 - Информатика и вычислительная техника" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,10"/>

                            <!-- Уровень подготовки -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Уровень:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>

                                <Border Style="{StaticResource LevelTagStyle}"
                                        Background="#E3F2FD">
                                    <TextBlock Text="БАКАЛАВРИАТ" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DirectionTagColor2}"/>
                                </Border>

                                <Border Style="{StaticResource LevelTagStyle}"
                                        Background="#FFF3E0">
                                    <TextBlock Text="ОЧНАЯ ФОРМА" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DirectionTagColor3}"/>
                                </Border>
                            </StackPanel>

                            <!-- Описание -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Описание:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Подготовка специалистов в области разработки программного обеспечения, системного анализа и проектирования информационных систем" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Ключевые компетенции -->
                            <StackPanel>
                                <TextBlock Text="Ключевые компетенции:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource GroupTagStyle}"
                                            Background="#E8F5E9">
                                        <TextBlock Text="Программирование" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource GroupTagStyle}"
                                            Background="#E3F2FD">
                                        <TextBlock Text="Базы данных" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource GroupTagStyle}"
                                            Background="#FFF3E0">
                                        <TextBlock Text="Сетевые технологии" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource GroupTagStyle}"
                                            Background="#F3E5F5">
                                        <TextBlock Text="Искусственный интеллект" 
                                                   FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Кнопки действий -->
                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Редактировать"
                                    Width="120"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Удалить"
                                    Width="120"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Еще пример -->
                <Border Style="{StaticResource DirectionCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="38.03.01 - Экономика" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Уровень:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>

                                <Border Style="{StaticResource LevelTagStyle}"
                                        Background="#E3F2FD">
                                    <TextBlock Text="БАКАЛАВРИАТ" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DirectionTagColor2}"/>
                                </Border>

                                <Border Style="{StaticResource LevelTagStyle}"
                                        Background="#FFF3E0">
                                    <TextBlock Text="ЗАОЧНАЯ ФОРМА" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DirectionTagColor3}"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Описание:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Подготовка экономистов для работы в финансовых, аналитических и производственных организациях" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Ключевые компетенции:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource GroupTagStyle}"
                                            Background="#FFF3E0">
                                        <TextBlock Text="Финансовый анализ" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource GroupTagStyle}"
                                            Background="#E8F5E9">
                                        <TextBlock Text="Бухгалтерский учет" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource GroupTagStyle}"
                                            Background="#E3F2FD">
                                        <TextBlock Text="Экономика предприятия" 
                                                   FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Редактировать"
                                    Width="120"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Удалить"
                                    Width="120"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Пример магистратуры -->
                <Border Style="{StaticResource DirectionCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="09.04.01 - Информатика и вычислительная техника" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Уровень:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center"/>

                                <Border Style="{StaticResource LevelTagStyle}"
                                        Background="#F3E5F5">
                                    <TextBlock Text="МАГИСТРАТУРА" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DirectionTagColor4}"/>
                                </Border>

                                <Border Style="{StaticResource LevelTagStyle}"
                                        Background="#FFF3E0">
                                    <TextBlock Text="ОЧНО-ЗАОЧНАЯ" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DirectionTagColor3}"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Описание:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Углубленная подготовка специалистов в области разработки сложных программных систем и управления IT-проектами" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Научные направления:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,0,5"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource GroupTagStyle}"
                                            Background="#E3F2FD">
                                        <TextBlock Text="Большие данные" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource GroupTagStyle}"
                                            Background="#F3E5F5">
                                        <TextBlock Text="Машинное обучение" 
                                                   FontSize="12"/>
                                    </Border>
                                    <Border Style="{StaticResource GroupTagStyle}"
                                            Background="#E8F5E9">
                                        <TextBlock Text="Кибербезопасность" 
                                                   FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Редактировать"
                                    Width="120"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Удалить"
                                    Width="120"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель с информацией -->
        <Border Background="{StaticResource White}" 
                Height="60" 
                VerticalAlignment="Bottom"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,1,0,0">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о количестве -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Всего направлений:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="3" 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Бакалавриат:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="2" 
                               FontWeight="Medium"
                               Foreground="{StaticResource DirectionTagColor2}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Магистратура:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="1" 
                               FontWeight="Medium"
                               Foreground="{StaticResource DirectionTagColor4}"/>
                </StackPanel>

                <!-- Кнопка добавления -->
                <Button Grid.Column="1"
                        x:Name="addBtn"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Add"
                        Content="+ Добавить направление"
                        Width="200"
                        Height="38"
                        Visibility="Hidden"/>
            </Grid>
        </Border>

        <!-- Сообщение при пустом списке -->
        <Border x:Name="emptyMessage"
                Visibility="Collapsed"
                Background="{StaticResource White}"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="250">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="20">

                <TextBlock Text="🎓" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Направления подготовки" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkGray}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Добавляйте направления подготовки студентов учебного заведения." 
                           FontSize="13" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Указывайте код направления, название, уровень подготовки и ключевые компетенции" 
                           FontSize="12" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           FontStyle="Italic"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Добавить первое направление"
                        Width="220"
                        Height="38"
                        Margin="0,20,0,0"
                        Click="Add"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
