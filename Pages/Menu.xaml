<Page x:Class="EquipmentManagement.Client.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages"
        mc:Ignorable="d" 
  d:DesignHeight="600" d:DesignWidth="1000"
  Title="Меню управления оборудованием" FontFamily="/Fonts/#Montserrat">

    <Page.Resources>
        <!-- Современный стиль для карточек-кнопок -->
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0060AC"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                            CornerRadius="8" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                            </Border.Effect>
                            <ContentPresenter x:Name="contentPresenter" 
                                          Margin="{TemplateBinding Padding}" 
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F8FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#0060AC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                                <Setter Property="Foreground" Value="#E41613"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E1F0FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки выхода -->
        <Style x:Key="ExitButtonStyle" TargetType="Button" BasedOn="{StaticResource CardButtonStyle}">
            <Setter Property="Background" Value="#E41613"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#CC120F"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="120"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF302D"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Фоновый градиент согласно ТЗ -->
        <Grid.Background>
            <VisualBrush TileMode="None">
                <VisualBrush.Visual>
                    <Image Source="C:\Users\Student-A502.PERMAVIAT\Desktop\pypy\YP02\Images\logo.png" 
                />
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>

        <!-- Верхняя панель с заголовком -->
        <Border Background="#1AFFFFFF" Height="80" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="30,0">
                    <TextBlock Text="Информационная система" 
                           FontSize="14" 
                           Foreground="White" 
                           Opacity="0.9"/>
                    <TextBlock Text="Учёт оборудования" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                </StackPanel>

                <Button Grid.Column="1" 
                    Click="Exit" 
                    Style="{StaticResource ExitButtonStyle}" 
                    Content="Выход" 
                    VerticalAlignment="Center" 
                    Margin="30,0"/>
            </Grid>
        </Border>

        <!-- Основной контейнер меню -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20,100,20,30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка -->
                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="ОСНОВНЫЕ РАЗДЕЛЫ" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,15"/>

                    <Button Click="OpenEquip" 
                        Style="{StaticResource CardButtonStyle}" 
                        Content="📦 Оборудование" 
                        Margin="0,0,0,10"/>

                    <Button Click="OpenAudien" 
                        Style="{StaticResource CardButtonStyle}" 
                        Content="🏛️ Аудитории" 
                        Margin="0,0,0,10"/>

                    <Button Click="OpenRMat" 
                        Style="{StaticResource CardButtonStyle}" 
                        Content="📄 Расходные материалы" 
                        Margin="0,0,0,10"/>

                    <Button Click="OpenInvent" 
                        Style="{StaticResource CardButtonStyle}" 
                        Content="📋 Инвентаризация" 
                        Margin="0,0,0,10"/>

                    <Button Click="OpenUsers" 
                        x:Name="users" 
                        Visibility="Hidden"
                        Style="{StaticResource CardButtonStyle}" 
                        Content="👥 Пользователи" 
                        Margin="0,0,0,10"/>

                    <Button Click="OpenSettings" 
                        Style="{StaticResource CardButtonStyle}" 
                        Content="🌐 Сетевые настройки" 
                        Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Правая колонка -->
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="СПРАВОЧНИКИ И КЛАССИФИКАТОРЫ" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,15"/>

                    <WrapPanel Margin="0,0,0,15">
                        <Button Click="OpenEqType" 
                            Style="{StaticResource CardButtonStyle}" 
                            Content="Тип оборудования" 
                            Margin="0,0,10,10"/>

                        <Button Click="OpenDirection" 
                            Style="{StaticResource CardButtonStyle}" 
                            Content="Направление" 
                            Margin="0,0,10,10"/>

                        <Button Click="OpenStatus" 
                            Style="{StaticResource CardButtonStyle}" 
                            Content="Статус" 
                            Margin="0,0,10,10"/>

                        <Button Click="OpenModType" 
                            Style="{StaticResource CardButtonStyle}" 
                            Content="Вид модели" 
                            Margin="0,0,10,10"/>
                    </WrapPanel>

                    <WrapPanel Margin="0,0,0,15">
                        <Button Click="OpenProgr" 
                            Style="{StaticResource CardButtonStyle}" 
                            Content="Программы" 
                            Margin="0,0,10,10"/>

                        <Button Click="OpenDevel" 
                            Style="{StaticResource CardButtonStyle}" 
                            Content="Разработчики" 
                            Margin="0,0,10,10"/>
                    </WrapPanel>

                    <TextBlock Text="ХАРАКТЕРИСТИКИ РАСХОДНЫХ МАТЕРИАЛОВ" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,10,0,15"/>

                    <WrapPanel>
                        <Button Click="OpenCharRMat" 
                            Style="{StaticResource CardButtonStyle}" 
                            Content="Характеристики" 
                            Margin="0,0,10,10"/>

                        <Button Click="OpenTypeChar" 
                            Style="{StaticResource CardButtonStyle}" 
                            Content="Тип характеристики" 
                            Margin="0,0,10,10"/>

                        <Button Click="OpenValueChar" 
                            Style="{StaticResource CardButtonStyle}" 
                            Content="Значение характеристики" 
                            Margin="0,0,10,10"/>
                    </WrapPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Нижний колонтитул -->
        <Border Background="#1A000000" Height="40" VerticalAlignment="Bottom">
            <TextBlock Text="КГАПОУ Пермский Авиационный техникум им. А.Д. Швецова" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   Foreground="White" 
                   Opacity="0.7" 
                   FontSize="12"/>
        </Border>
    </Grid>
</Page>
