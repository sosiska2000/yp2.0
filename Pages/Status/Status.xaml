<Page x:Class="EquipmentManagement.Client.Pages.Status.Status"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.Status"
      mc:Ignorable="d" 
     d:DesignHeight="700" d:DesignWidth="1200"
      Title="Статусы оборудования">

    <Page.Resources>
        <!-- Цветовая палитра по ТЗ -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0060AC"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E41613"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#9EA1A2"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="White" Color="White"/>
        <SolidColorBrush x:Key="DarkGray" Color="#333333"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="StatusActiveColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="StatusInactiveColor" Color="#757575"/>
        <SolidColorBrush x:Key="StatusRepairColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="StatusBrokenColor" Color="#F44336"/>
        <SolidColorBrush x:Key="StatusReservedColor" Color="#2196F3"/>

        <!-- Стиль основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0077CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль вторичной кнопки -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        </Style>

        <!-- Стиль кнопки "Назад" -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Стиль для поля поиска -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"/>
                                <TextBlock Text="Поиск по названию статуса..." 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="12,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек статусов -->
        <Style x:Key="StatusCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для тегов количества оборудования -->
        <Style x:Key="EquipmentCountTagStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource HoverBlue}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Стиль для цветового индикатора статуса -->
        <Style x:Key="StatusIndicatorStyle" TargetType="Border">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource White}" 
                Height="70" 
                VerticalAlignment="Top"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🏷️" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="СТАТУСЫ ОБОРУДОВАНИЯ" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBlue}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="(1.3)" 
                               FontSize="12" 
                               Foreground="{StaticResource NeutralGray}"
                               VerticalAlignment="Bottom"
                               Margin="5,0,0,2"/>
                </StackPanel>

                <!-- Панель поиска и сортировки -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <!-- Поле поиска -->
                    <TextBox x:Name="search" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             Width="300"
                             Height="38"
                             KeyDown="KeyDown_Search"/>

                    <!-- Кнопки сортировки -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="btnSortUp"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▲"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Click="SortUp"
                                ToolTip="Сортировка по возрастанию"/>

                        <Button x:Name="btnSortDown"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▼"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Margin="5,0,0,0"
                                Click="SortDown"
                                ToolTip="Сортировка по убыванию"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка "Назад" -->
                <Button Grid.Column="2"
                        Style="{StaticResource BackButtonStyle}"
                        Click="Back"
                        Content="← Назад"
                        Width="100"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,80,20,70">
            <StackPanel x:Name="parent">

                <!-- Примеры статусов из ТЗ -->

                <!-- Статус: Используется -->
                <Border Style="{StaticResource StatusCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Цветовой индикатор -->
                        <Border Grid.Column="0" 
                                Style="{StaticResource StatusIndicatorStyle}"
                                Background="{StaticResource StatusActiveColor}"/>

                        <!-- Информация о статусе -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Используется" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Оборудование находится в эксплуатации и используется по назначению" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Количество оборудования и действия -->
                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <Border Style="{StaticResource EquipmentCountTagStyle}">
                                <TextBlock Text="45 ед. оборудования" 
                                           FontSize="12"/>
                            </Border>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="✏️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="10,0,0,0"
                                    ToolTip="Редактировать"
                                    Click="Edit_Click"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="🗑️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="5,0,0,0"
                                    ToolTip="Удалить"
                                    Click="Delete_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Статус: На ремонте -->
                <Border Style="{StaticResource StatusCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Style="{StaticResource StatusIndicatorStyle}"
                                Background="{StaticResource StatusRepairColor}"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="На ремонте" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Оборудование находится в ремонте или обслуживании" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <Border Style="{StaticResource EquipmentCountTagStyle}">
                                <TextBlock Text="12 ед. оборудования" 
                                           FontSize="12"/>
                            </Border>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="✏️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="10,0,0,0"
                                    ToolTip="Редактировать"
                                    Click="Edit_Click"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="🗑️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="5,0,0,0"
                                    ToolTip="Удалить"
                                    Click="Delete_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Статус: Сломано -->
                <Border Style="{StaticResource StatusCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Style="{StaticResource StatusIndicatorStyle}"
                                Background="{StaticResource StatusBrokenColor}"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Сломано" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Оборудование неисправно и требует ремонта или списания" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <Border Style="{StaticResource EquipmentCountTagStyle}">
                                <TextBlock Text="8 ед. оборудования" 
                                           FontSize="12"/>
                            </Border>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="✏️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="10,0,0,0"
                                    ToolTip="Редактировать"
                                    Click="Edit_Click"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="🗑️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="5,0,0,0"
                                    ToolTip="Удалить"
                                    Click="Delete_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Статус: На выдаче -->
                <Border Style="{StaticResource StatusCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Style="{StaticResource StatusIndicatorStyle}"
                                Background="{StaticResource StatusReservedColor}"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="На выдаче" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Оборудование зарезервировано для выдачи пользователям" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <Border Style="{StaticResource EquipmentCountTagStyle}">
                                <TextBlock Text="15 ед. оборудования" 
                                           FontSize="12"/>
                            </Border>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="✏️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="10,0,0,0"
                                    ToolTip="Редактировать"
                                    Click="Edit_Click"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="🗑️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="5,0,0,0"
                                    ToolTip="Удалить"
                                    Click="Delete_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Статус: В резерве -->
                <Border Style="{StaticResource StatusCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Style="{StaticResource StatusIndicatorStyle}"
                                Background="{StaticResource StatusInactiveColor}"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="В резерве" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Оборудование находится в резерве и временно не используется" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <Border Style="{StaticResource EquipmentCountTagStyle}">
                                <TextBlock Text="23 ед. оборудования" 
                                           FontSize="12"/>
                            </Border>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="✏️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="10,0,0,0"
                                    ToolTip="Редактировать"
                                    Click="Edit_Click"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="🗑️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="5,0,0,0"
                                    ToolTip="Удалить"
                                    Click="Delete_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель с информацией -->
        <Border Background="{StaticResource White}" 
                Height="60" 
                VerticalAlignment="Bottom"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,1,0,0">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о количестве -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Всего статусов:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="5" 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Оборудование в статусах:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="103 ед." 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Самый популярный:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="Используется (45 ед.)" 
                               FontWeight="Medium"
                               Foreground="{StaticResource StatusActiveColor}"/>
                </StackPanel>

                <!-- Кнопка добавления -->
                <Button Grid.Column="1"
                        x:Name="addBtn"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Add"
                        Content="+ Добавить статус"
                        Width="160"
                        Height="38"
                        Visibility="Hidden"/>
            </Grid>
        </Border>


        <!-- Сообщение при пустом списке -->
        <Border x:Name="emptyMessage"
                Visibility="Collapsed"
                Background="{StaticResource White}"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="250">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="20">

                <TextBlock Text="🏷️" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Статусы оборудования" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkGray}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Добавьте статусы для отслеживания состояния оборудования." 
                           FontSize="13" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Примеры из ТЗ: 'на ремонте', 'используется', 'сломано', 'на выдаче'" 
                           FontSize="12" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           FontStyle="Italic"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Добавить первый статус"
                        Width="180"
                        Height="38"
                        Margin="0,20,0,0"
                        Click="Add"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
