<Page x:Class="EquipmentManagement.Client.Pages.Users.Users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.Users"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Пользователи системы">

    <Page.Resources>
        <!-- Цветовая палитра по ТЗ -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0060AC"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E41613"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#9EA1A2"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="White" Color="White"/>
        <SolidColorBrush x:Key="DarkGray" Color="#333333"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="AdminRoleColor" Color="#D32F2F"/>
        <SolidColorBrush x:Key="TeacherRoleColor" Color="#1976D2"/>
        <SolidColorBrush x:Key="EmployeeRoleColor" Color="#388E3C"/>

        <!-- Стиль основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0077CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль вторичной кнопки -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        </Style>

        <!-- Стиль кнопки "Назад" -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Стиль для поля поиска -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"/>
                                <TextBlock Text="Поиск по ФИО, логину или email..." 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="12,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек пользователей -->
        <Style x:Key="UserCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Стиль для тегов ролей -->
        <Style x:Key="RoleTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Стиль для аватара пользователя -->
        <Style x:Key="UserAvatarStyle" TargetType="Border">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource White}" 
                Height="70" 
                VerticalAlignment="Top"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👥" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="ПОЛЬЗОВАТЕЛИ СИСТЕМЫ" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBlue}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="(1.9)" 
                               FontSize="12" 
                               Foreground="{StaticResource NeutralGray}"
                               VerticalAlignment="Bottom"
                               Margin="5,0,0,2"/>
                </StackPanel>

                <!-- Панель поиска и сортировки -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <!-- Поле поиска -->
                    <TextBox x:Name="search" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             Width="300"
                             Height="38"
                             KeyDown="KeyDown_Search"/>

                    <!-- Кнопки сортировки -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="btnSortUp"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▲"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Click="SortUp"
                                ToolTip="Сортировка по ФИО (А-Я)"/>

                        <Button x:Name="btnSortDown"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▼"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Margin="5,0,0,0"
                                Click="SortDown"
                                ToolTip="Сортировка по ФИО (Я-А)"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка "Назад" -->
                <Button Grid.Column="2"
                        Style="{StaticResource BackButtonStyle}"
                        Click="Back"
                        Content="← Назад"
                        Width="100"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,80,20,70">
            <StackPanel x:Name="parent">

                <!-- Пример пользователя с ролью администратора -->
                <Border Style="{StaticResource UserCardStyle}">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Аватар -->
                        <Border Grid.Column="0" 
                                Style="{StaticResource UserAvatarStyle}"
                                Background="{StaticResource AdminRoleColor}">
                            <TextBlock Text="АИ" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Информация о пользователе -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Администратор Иванов" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Иванов Иван Иванович" 
                                           FontSize="14" 
                                           Foreground="{StaticResource DarkGray}"
                                           Margin="0,0,16,0"/>

                                <TextBlock Text="•" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,16,0"/>

                                <TextBlock Text="admin@example.com" 
                                           FontSize="14" 
                                           Foreground="{StaticResource PrimaryBlue}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Логин: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="admin" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource DarkGray}"/>

                                <TextBlock Text=" • " 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="10,0,10,0"/>

                                <TextBlock Text="Телефон: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="+7 (999) 123-45-67" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Роль и действия -->
                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">

                            <!-- Роль -->
                            <Border Style="{StaticResource RoleTagStyle}"
                                    Background="#FFEBEE">
                                <TextBlock Text="АДМИНИСТРАТОР" 
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource AdminRoleColor}"/>
                            </Border>

                            <!-- Кнопки действий -->
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Style="{StaticResource PrimaryButtonStyle}"
                                        Content="Редактировать"
                                        Width="120"
                                        Height="32"
                                        Margin="0,0,8,0"
                                        FontSize="12"/>

                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        Content="Сброс пароля"
                                        Width="120"
                                        Height="32"
                                        FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Пример пользователя с ролью преподавателя -->
                <Border Style="{StaticResource UserCardStyle}">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Style="{StaticResource UserAvatarStyle}"
                                Background="{StaticResource TeacherRoleColor}">
                            <TextBlock Text="ПП" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Петров Петр Петрович" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Преподаватель информатики" 
                                           FontSize="14" 
                                           Foreground="{StaticResource DarkGray}"
                                           Margin="0,0,16,0"/>

                                <TextBlock Text="•" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,16,0"/>

                                <TextBlock Text="petrov@example.com" 
                                           FontSize="14" 
                                           Foreground="{StaticResource PrimaryBlue}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Логин: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="petrov_pp" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource DarkGray}"/>

                                <TextBlock Text=" • " 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="10,0,10,0"/>

                                <TextBlock Text="Адрес: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="г. Пермь, ул. Ленина, 15" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">

                            <Border Style="{StaticResource RoleTagStyle}"
                                    Background="#E3F2FD">
                                <TextBlock Text="ПРЕПОДАВАТЕЛЬ" 
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TeacherRoleColor}"/>
                            </Border>

                            <!-- Инвентаризация (по ТЗ) -->
                            <Border Background="#E8F5E9"
                                    CornerRadius="6"
                                    Padding="8"
                                    Margin="0,8,0,0">
                                <TextBlock Text="Может проводить инвентаризацию закрепленного оборудования" 
                                           FontSize="11" 
                                           Foreground="#2E7D32"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                            </Border>

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Style="{StaticResource PrimaryButtonStyle}"
                                        Content="Редактировать"
                                        Width="120"
                                        Height="32"
                                        Margin="0,0,8,0"
                                        FontSize="12"/>

                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        Content="Закрепить оборуд."
                                        Width="120"
                                        Height="32"
                                        FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Пример пользователя с ролью сотрудника -->
                <Border Style="{StaticResource UserCardStyle}">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Style="{StaticResource UserAvatarStyle}"
                                Background="{StaticResource EmployeeRoleColor}">
                            <TextBlock Text="СС" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Сидоров Сергей Сергеевич" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Системный администратор" 
                                           FontSize="14" 
                                           Foreground="{StaticResource DarkGray}"
                                           Margin="0,0,16,0"/>

                                <TextBlock Text="•" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,16,0"/>

                                <TextBlock Text="sidorov@example.com" 
                                           FontSize="14" 
                                           Foreground="{StaticResource PrimaryBlue}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Логин: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="sidorov_ss" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource DarkGray}"/>

                                <TextBlock Text=" • " 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="10,0,10,0"/>

                                <TextBlock Text="Телефон: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="+7 (999) 987-65-43" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">

                            <Border Style="{StaticResource RoleTagStyle}"
                                    Background="#E8F5E9">
                                <TextBlock Text="СОТРУДНИК" 
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource EmployeeRoleColor}"/>
                            </Border>

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Style="{StaticResource PrimaryButtonStyle}"
                                        Content="Редактировать"
                                        Width="120"
                                        Height="32"
                                        Margin="0,0,8,0"
                                        FontSize="12"/>

                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        Content="Отключить"
                                        Width="120"
                                        Height="32"
                                        FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель с информацией -->
        <Border Background="{StaticResource White}" 
                Height="60" 
                VerticalAlignment="Bottom"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,1,0,0">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о количестве -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Всего пользователей:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="3" 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Администраторы:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="1" 
                               FontWeight="Medium"
                               Foreground="{StaticResource AdminRoleColor}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Преподаватели:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="1" 
                               FontWeight="Medium"
                               Foreground="{StaticResource TeacherRoleColor}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Сотрудники:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="1" 
                               FontWeight="Medium"
                               Foreground="{StaticResource EmployeeRoleColor}"/>
                </StackPanel>

                <!-- Кнопка добавления -->
                <Button Grid.Column="1"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Add"
                        Content="+ Добавить пользователя"
                        Width="200"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Сообщение при пустом списке -->
        <Border x:Name="emptyMessage"
                Visibility="Collapsed"
                Background="{StaticResource White}"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="280">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="20">

                <TextBlock Text="👥" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Пользователи системы" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkGray}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Добавьте пользователей для доступа к системе управления оборудованием." 
                           FontSize="13" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="По ТЗ: пользователи могут участвовать в инвентаризации закрепленного за ними оборудования" 
                           FontSize="12" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           FontStyle="Italic"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Добавить первого пользователя"
                        Width="220"
                        Height="38"
                        Margin="0,10,0,0"
                        Click="Add"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
