<Page x:Class="EquipmentManagement.Client.Pages.Equipment.Equipment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.Equipment"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Оборудование">

    <Page.Resources>
        <!-- Цветовая палитра по ТЗ -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0060AC"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E41613"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#9EA1A2"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="White" Color="White"/>
        <SolidColorBrush x:Key="DarkGray" Color="#333333"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="TableHeader" Color="#F8F9FA"/>

        <!-- Стиль основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0077CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль вторичной кнопки -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        </Style>

        <!-- Стиль кнопки "Назад" -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        </Style>

        <!-- Стиль поля поиска -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"/>
                                <TextBlock Text="Поиск по наименованию..." 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="12,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек оборудования -->
        <Style x:Key="EquipmentCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource White}" 
                Height="70" 
                VerticalAlignment="Top"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="ОБОРУДОВАНИЕ" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBlue}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Панель поиска и сортировки -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <!-- Поле поиска -->
                    <TextBox x:Name="search" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             Width="300"
                             Height="38"
                             KeyDown="KeyDown_Search"/>

                    <!-- Кнопки сортировки -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="btnSortUp"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▲"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Click="SortUp"
                                ToolTip="Сортировка по возрастанию"/>

                        <Button x:Name="btnSortDown"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▼"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Margin="5,0,0,0"
                                Click="SortDown"
                                ToolTip="Сортировка по убыванию"/>
                    </StackPanel>

                    <!-- Кнопка импорта -->
                    <Button x:Name="import"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="40"
                            Height="38"
                            Margin="10,0,0,0"
                            Click="GoImport"
                            Visibility="Hidden"
                            ToolTip="Импорт из Excel">
                        <TextBlock Text="📥" FontSize="16"/>
                    </Button>
                </StackPanel>

                <!-- Кнопка "Назад" -->
                <Button Grid.Column="2"
                        Style="{StaticResource BackButtonStyle}"
                        Click="Back"
                        Content="← Назад"
                        Width="100"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,80,20,70">
            <!-- Здесь будет динамически генерироваться список оборудования -->
            <StackPanel x:Name="parent">
                <!-- Пример карточки оборудования -->
                <Border Style="{StaticResource EquipmentCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Изображение оборудования -->
                        <Border Grid.Column="0"
                                Width="80" 
                                Height="80" 
                                Background="{StaticResource HoverBlue}"
                                CornerRadius="6"
                                Margin="0,0,16,0">
                            <Image Source="/Images/1pic.png" 
                                   Stretch="Uniform"/>
                        </Border>

                        <!-- Основная информация -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Ноутбук Dell T200" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,6"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="Инв. №:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="000012123124" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="Аудитория:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Кабинет 301" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Статус:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <Border Background="#E8F5E9" 
                                        CornerRadius="4" 
                                        Padding="4,2">
                                    <TextBlock Text="Используется" 
                                               FontSize="11"
                                               Foreground="#2E7D32"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- Кнопки действий -->
                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Просмотр"
                                    Width="100"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="История"
                                    Width="100"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Еще одна карточка для примера -->
                <Border Style="{StaticResource EquipmentCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Width="80" 
                                Height="80" 
                                Background="{StaticResource HoverBlue}"
                                CornerRadius="6"
                                Margin="0,0,16,0">
                            <Image Source="/Images/2pic.png" 
                                   Stretch="Uniform"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Принтер HP LaserJet" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,6"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="Инв. №:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="410134020003" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="Аудитория:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Кабинет 205" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Статус:" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <Border Background="#FFEBEE" 
                                        CornerRadius="4" 
                                        Padding="4,2">
                                    <TextBlock Text="На ремонте" 
                                               FontSize="11"
                                               Foreground="#C62828"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Просмотр"
                                    Width="100"
                                    Margin="0,0,0,8"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="История"
                                    Width="100"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель с кнопками -->
        <Border Background="{StaticResource White}" 
                Height="60" 
                VerticalAlignment="Bottom"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,1,0,0">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопки документов -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">

                    <Button x:Name="exportDoc"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="ExportObor"
                            Content="📄 Акт приема-передачи"
                            Width="200"
                            Height="38"
                            FontSize="13"
                            Visibility="Hidden"/>

                    <Button x:Name="exportDoc1"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="ExportObor1"
                            Content="📄 Акт на временное пользование"
                            Width="250"
                            Height="38"
                            FontSize="13"
                            Margin="10,0,0,0"
                            Visibility="Hidden"/>
                </StackPanel>

                <!-- Кнопка добавления -->
                <Button Grid.Column="1"
                        x:Name="addBtn"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Add"
                        Content="+ Добавить оборудование"
                        Width="200"
                        Height="38"
                        Visibility="Hidden"/>
            </Grid>
        </Border>
    </Grid>
</Page>
