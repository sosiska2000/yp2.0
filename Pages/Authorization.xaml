<Page x:Class="EquipmentManagement.Client.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages"
      mc:Ignorable="d" 
        d:DesignHeight="600" d:DesignWidth="900"
  Title="Авторизация - Учёт оборудования" 
  FontFamily="/Fonts/#Montserrat">

    <Page.Resources>
        <!-- Современные стили -->
        <Style x:Key="ModernTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" 
                            CornerRadius="8" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="False" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>
                                <TextBlock x:Name="placeholder" 
                                       Text="{TemplateBinding Tag}" 
                                       Foreground="#999999" 
                                       Margin="12,10" 
                                       Visibility="Collapsed"
                                       IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0060AC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0060AC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Background" Value="#F8FAFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Упрощённый стиль для PasswordBox -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="{x:Type PasswordBox}">
            <Setter Property="PasswordChar" Value="●"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border x:Name="border" 
                            CornerRadius="8" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="False" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>
                                <!-- Placeholder будет управляться из кода C# -->
                                <TextBlock x:Name="placeholder" 
                                       Text="Введите пароль" 
                                       Foreground="#999999" 
                                       Margin="12,10" 
                                       IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0060AC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0060AC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Background" Value="#F8FAFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#0060AC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#005099"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                            CornerRadius="8" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005099"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#004080"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004080"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#BBBBBB"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Фоновое изображение с логотипом -->
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\Student-A502.PERMAVIAT\Desktop\pypy\YP02\Images\logo.png" 
                    Stretch="UniformToFill" 
                    Opacity="0.07"/>
        </Grid.Background>

        <!-- Основной контент -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель с информацией -->
            <Border Grid.Column="0" 
                Background="#0060AC" 
                CornerRadius="12,0,0,12">
                <Grid>
                    <StackPanel VerticalAlignment="Center" Margin="40">
                        <!-- Логотип учреждения -->
                        <Border Width="120" Height="120" 
                            Background="White" 
                            CornerRadius="60"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,30">
                            <TextBlock Text="ПАТ" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#0060AC"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Добро пожаловать" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"
                               Margin="0,0,0,10"/>

                        <TextBlock Text="в систему учёта оборудования" 
                               FontSize="18" 
                               Foreground="#E0F0FF"
                               Margin="0,0,0,30"/>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Ellipse Width="10" Height="10" Fill="#E41613" VerticalAlignment="Center"/>
                                <TextBlock Text="Учёт оборудования и аудиторий" 
                                       Foreground="White" 
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Ellipse Width="10" Height="10" Fill="#E41613" VerticalAlignment="Center"/>
                                <TextBlock Text="Инвентаризация и контроль" 
                                       Foreground="White" 
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#E41613" VerticalAlignment="Center"/>
                                <TextBlock Text="Управление расходами" 
                                       Foreground="White" 
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Правая панель с формой входа -->
            <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="0,12,12,0"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
                <StackPanel VerticalAlignment="Center" Margin="50,40">
                    <TextBlock Text="Вход в систему" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#333333"
                           Margin="0,0,0,40"/>

                    <!-- Поле логина -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Логин" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Foreground="#666666"
                               Margin="0,0,0,5"/>
                        <TextBox x:Name="login" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Tag="Введите логин"
                             Height="45"/>
                    </StackPanel>

                    <!-- Поле пароля -->
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock Text="Пароль" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Foreground="#666666"
                               Margin="0,0,0,5"/>
                        <PasswordBox x:Name="password" 
                                 Style="{StaticResource ModernPasswordBoxStyle}"
                                 Height="45"/>
                    </StackPanel>

                    <!-- Кнопка входа -->
                    <Button x:Name="btnLogin" 
                        Content="Войти в систему" 
                        Style="{StaticResource ModernButtonStyle}"
                        Height="50"
                        Click="AuthorizationClick"
                        Margin="0,0,0,20"/>

                    <!-- Дополнительная информация -->
                    <StackPanel>
                        <TextBlock Text="КГАПОУ Пермский Авиационный техникум им. А.Д. Швецова" 
                               FontSize="11" 
                               Foreground="#999999"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>

                        <TextBlock Text="Информационная система учёта оборудования" 
                               FontSize="10" 
                               Foreground="#BBBBBB"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Сообщение об ошибке -->
        <Border x:Name="errorMessage" 
            Background="#E41613" 
            CornerRadius="8" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Center"
            Margin="0,30,0,0"
            Padding="20,15"
            Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" 
                  Fill="White" 
                  Width="20" 
                  Height="20"
                  Margin="0,0,10,0"/>
                <TextBlock x:Name="errorText" 
                       Text="Неверный логин или пароль" 
                       Foreground="White" 
                       FontSize="14"
                       VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
