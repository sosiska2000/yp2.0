<Page x:Class="EquipmentManagement.Client.Pages.Oborudovanie.Oborudovanie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.Oborudovanie"
        mc:Ignorable="d" 
  d:DesignHeight="650" d:DesignWidth="1000"
  Title="Оборудование" 
  FontFamily="/Fonts/#Montserrat">

    <Page.Resources>
        <!-- Используем те же стили -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" 
                            CornerRadius="8" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="False" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>
                                <TextBlock x:Name="placeholder" 
                                       Text="{TemplateBinding Tag}" 
                                       Foreground="#999999" 
                                       Margin="12,10" 
                                       Visibility="Collapsed"
                                       IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0060AC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0060AC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Background" Value="#F8FAFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#0060AC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#005099"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                            CornerRadius="8" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005099"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#004080"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0060AC"/>
            <Setter Property="BorderBrush" Value="#0060AC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                    <Setter Property="BorderBrush" Value="#005099"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="18"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                    <Setter Property="Foreground" Value="#0060AC"/>
                    <Setter Property="BorderBrush" Value="#0060AC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#E41613"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#CC120F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CC120F"/>
                    <Setter Property="BorderBrush" Value="#AA0E0C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Фоновое изображение с логотипом -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/logo.png" 
                    Stretch="UniformToFill" 
                    Opacity="0.05"/>
        </Grid.Background>

        <!-- Верхняя панель управления -->
        <Border Background="White" 
            CornerRadius="0,0,12,12" 
            Height="80" 
            VerticalAlignment="Top"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="ОБОРУДОВАНИЕ" 
                           FontSize="12" 
                           FontWeight="Bold" 
                           Foreground="#9EA1A2"
                           Margin="0,0,0,2"/>
                    <TextBlock Text="Учёт и управление оборудованием" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#0060AC"/>
                </StackPanel>

                <!-- Поиск, сортировка и импорт -->
                <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                    <TextBox x:Name="search" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Tag="Поиск по названию или инвентарному номеру..."
                         Width="300" 
                         Height="40"
                         KeyDown="KeyDown_Search"/>

                    <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                        <Button x:Name="btnSortUp" 
                            Content="↑" 
                            Style="{StaticResource IconButtonStyle}"
                            FontFamily="Segoe UI"
                            ToolTip="Сортировать по возрастанию"
                            Click="SortUp"/>

                        <Button x:Name="btnSortDown" 
                            Content="↓" 
                            Style="{StaticResource IconButtonStyle}"
                            FontFamily="Segoe UI"
                            Margin="5,0,0,0"
                            ToolTip="Сортировать по убыванию"
                            Click="SortDown"/>

                        <Button x:Name="import" 
                            Visibility="Hidden"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="Импорт из файла"
                            Margin="5,0,0,0"
                            Click="GoImport">
                            <TextBlock Text="📥" 
                                   FontSize="16"/>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка назад -->
                <Button Grid.Column="2" 
                    x:Name="btnBack"
                    Content="← Назад" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    VerticalAlignment="Center"
                    Width="120"
                    Click="Back"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,90,20,100" 
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="parent">
                <!-- Карточки оборудования -->
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель с кнопками -->
        <Border Background="White" 
            Height="90" 
            VerticalAlignment="Bottom"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть: кнопки генерации документов -->
                <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        >
                    <Button x:Name="exportDoc" 
                        Visibility="Hidden"
                        Content="📄 Основной акт" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        VerticalAlignment="Center"
                        Width="160"
                        FontWeight="SemiBold"
                        Click="ExportObor">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📄" 
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                    <TextBlock Text="Основной акт" 
                                           VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="exportDoc1" 
                        Visibility="Hidden"
                        Content="📋 На временное пользование" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        VerticalAlignment="Center"
                        Width="250"
                        FontWeight="SemiBold"
                        Click="ExportObor1">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📋" 
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                    <TextBlock Text="На временное пользование" 
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>

                <!-- Правая часть: кнопка добавления -->
                <Button Grid.Column="1" 
                    x:Name="addBtn" 
                    Visibility="Hidden"
                    Content="+ Добавить" 
                    Style="{StaticResource ModernButtonStyle}"
                    VerticalAlignment="Center"
                    Width="180"
                    Click="Add">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Добавить" 
                                       VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
        </Border>

        <!-- Пустое состояние -->
        <Border x:Name="emptyState" 
            Visibility="Collapsed" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Background="White"
            CornerRadius="12"
            Padding="40"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
            <StackPanel>
                <TextBlock Text="🖥️"
                       FontSize="60"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
                <TextBlock Text="Оборудование не найдено" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
                <TextBlock Text="Добавьте первое оборудование или импортируйте данные" 
                       FontSize="14" 
                       Foreground="#999999"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
                <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        >
                    <Button Content="Добавить" 
                        Style="{StaticResource ModernButtonStyle}"
                        Width="150"
                        Click="Add"/>
                    <Button Content="📥 Импорт" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="150"
                        Click="GoImport"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
