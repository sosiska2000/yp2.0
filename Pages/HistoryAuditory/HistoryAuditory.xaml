<Page x:Class="EquipmentManagement.Client.Pages.HistoryAuditory.HistoryAuditory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.HistoryAuditory"
        mc:Ignorable="d" 
  d:DesignHeight="650" d:DesignWidth="1000"
  Title="История перемещения"
  FontFamily="/Fonts/#Montserrat">

    <Page.Resources>
        <!-- Современные стили -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" 
                            CornerRadius="8" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="False" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>
                                <TextBlock x:Name="placeholder" 
                                       Text="{TemplateBinding Tag}" 
                                       Foreground="#999999" 
                                       Margin="12,10" 
                                       Visibility="Collapsed"
                                       IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0060AC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0060AC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Background" Value="#F8FAFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#0060AC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#005099"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                            CornerRadius="8" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005099"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#004080"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0060AC"/>
            <Setter Property="BorderBrush" Value="#0060AC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                    <Setter Property="BorderBrush" Value="#005099"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="18"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                    <Setter Property="Foreground" Value="#0060AC"/>
                    <Setter Property="BorderBrush" Value="#0060AC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стили для карточек истории -->
        <Style x:Key="HistoryItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="8" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DateBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0F8FF"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для карточек фильтрации -->
        <Style x:Key="FilterCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Фоновое изображение с логотипом -->
        <Grid.Background>
            <ImageBrush ImageSource="/Images/logo.png" 
                    Stretch="UniformToFill" 
                    Opacity="0.05"/>
        </Grid.Background>

        <!-- Верхняя панель управления -->
        <Border Background="White" 
            CornerRadius="0,0,12,12" 
            Height="80" 
            VerticalAlignment="Top"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="ИСТОРИЯ ПЕРЕМЕЩЕНИЙ" 
                           FontSize="12" 
                           FontWeight="Bold" 
                           Foreground="#9EA1A2"
                           Margin="0,0,0,2"/>
                    <TextBlock Text="Отслеживание перемещений оборудования" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#0060AC"/>
                </StackPanel>

                <!-- Поле поиска -->
                <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                    <TextBox x:Name="searchTextBox" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Tag="Поиск по оборудованию или месту..."
                         Width="280" 
                         Height="40"
                         KeyDown="KeyDown_Search"/>

                    <!-- Кнопки фильтров -->
                    <Button x:Name="btnFilter" 
                        Content="Фильтры" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="15,0,0,0"
                        Width="100"
                        Click="ShowFilters"/>
                </StackPanel>

                <!-- Кнопка назад -->
                <Button Grid.Column="2" 
                    x:Name="btnBack"
                    Content="← Назад" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    VerticalAlignment="Center"
                    Width="120"
                    Click="Back"/>
            </Grid>
        </Border>

        <!-- Панель фильтров (скрыта по умолчанию) -->
        <Border x:Name="filterPanel" 
            Visibility="Collapsed"
            Background="White"
            CornerRadius="10"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            Margin="20,90,20,20"
            VerticalAlignment="Top"
            Height="150"
            Panel.ZIndex="1000">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок фильтров -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <Path Data="M10 18h4v-2h-4v2zM3 6v2h18V6H3zm3 7h12v-2H6v2z" 
                      Fill="#0060AC" 
                      Width="20" 
                      Height="20"
                      Margin="0,0,10,0"/>
                    <TextBlock Text="Фильтры" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Фильтры -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Фильтр по дате -->
                    <StackPanel Margin="0,0,30,0">
                        <TextBlock Text="Дата с:" 
                               FontSize="13" 
                               Foreground="#666666"
                               Margin="0,0,0,5"/>
                        <DatePicker x:Name="dateFromPicker" 
                                Width="150" 
                                FontSize="13"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="8"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,30,0">
                        <TextBlock Text="Дата по:" 
                               FontSize="13" 
                               Foreground="#666666"
                               Margin="0,0,0,5"/>
                        <DatePicker x:Name="dateToPicker" 
                                Width="150" 
                                FontSize="13"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="8"/>
                    </StackPanel>

                    <!-- Фильтр по типу действия -->
                    <StackPanel Margin="0,0,30,0">
                        <TextBlock Text="Тип действия:" 
                               FontSize="13" 
                               Foreground="#666666"
                               Margin="0,0,0,5"/>
                        <ComboBox x:Name="actionTypeComboBox" 
                              Width="200" 
                              FontSize="13"
                              Padding="8,6">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="13"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Кнопки управления фильтрами -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="30,0,0,0">
                        <Button x:Name="btnApplyFilters" 
                            Content="Применить" 
                            Style="{StaticResource ModernButtonStyle}"
                            Width="120"
                            Margin="0,0,10,0"
                            Click="ApplyFilters"/>

                        <Button x:Name="btnClearFilters" 
                            Content="Сбросить" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="120"
                            Click="ClearFilters"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,90,20,80" 
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="parent">

            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель -->
        <Border Background="White" 
            Height="70" 
            VerticalAlignment="Bottom"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Статус информации -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="statusText" 
                           Text="Найдено 0 записей" 
                           FontSize="14" 
                           Foreground="#666666"/>
                </StackPanel>

                <!-- Кнопки экспорта -->
                <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center">
                    <Button x:Name="btnExportPDF" 
                        Content="Экспорт в PDF" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="150"
                        Margin="0,0,10,0"
                        Click="ExportToPDF"/>

                    <Button x:Name="btnExportExcel" 
                        Content="Экспорт в Excel" 
                        Style="{StaticResource ModernButtonStyle}"
                        Width="150"
                        Click="ExportToExcel"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Пустое состояние -->
        <Border x:Name="emptyState" 
            Visibility="Collapsed" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center">
            <StackPanel>
                <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l5-5-5-5v10z" 
                  Fill="#9EA1A2" 
                  Width="80" 
                  Height="80"
                  Margin="0,0,0,20"/>
                <TextBlock Text="Записи истории не найдены" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
                <TextBlock Text="Измените параметры фильтрации" 
                       FontSize="14" 
                       Foreground="#999999"
                       HorizontalAlignment="Center"/>
                <Button Content="Сбросить фильтры" 
                    Style="{StaticResource ModernButtonStyle}"
                    Width="180"
                    Margin="0,20,0,0"
                    Click="ClearFilters"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
