<Page x:Class="EquipmentManagement.Client.Pages.Inventory.Inventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.Inventory"
      mc:Ignorable="d" d:DesignWidth="1200"
      Title="Инвентаризация оборудования" Height="1070">

    <Page.Resources>
        <!-- Цветовая палитра по ТЗ -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0060AC"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E41613"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#9EA1A2"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="White" Color="White"/>
        <SolidColorBrush x:Key="DarkGray" Color="#333333"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="InventoryActiveColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="InventoryCompletedColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="InventoryPlannedColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="InventoryOverdueColor" Color="#F44336"/>

        <!-- Стиль основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0077CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль вторичной кнопки -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        </Style>

        <!-- Стиль кнопки "Назад" -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Стиль для карточек инвентаризации -->
        <Style x:Key="InventoryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Стиль для статусов инвентаризации -->
        <Style x:Key="StatusTagStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Стиль для активной инвентаризации -->
        <Style x:Key="ActiveInventoryStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="{StaticResource InventoryActiveColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для завершенной инвентаризации -->
        <Style x:Key="CompletedInventoryStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource InventoryCompletedColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для запланированной инвентаризации -->
        <Style x:Key="PlannedInventoryStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderBrush" Value="{StaticResource InventoryPlannedColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для просроченной инвентаризации -->
        <Style x:Key="OverdueInventoryStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="BorderBrush" Value="{StaticResource InventoryOverdueColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для прогресс-бара -->
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Background" Value="{StaticResource LightGray}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border CornerRadius="4" 
                                Background="{TemplateBinding Background}">
                            <Grid>
                                <Border x:Name="PART_Track" 
                                        CornerRadius="4"/>
                                <Border x:Name="PART_Indicator" 
                                        CornerRadius="4" 
                                        HorizontalAlignment="Left" 
                                        Background="{TemplateBinding Foreground}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource White}" 
                Height="70" 
                VerticalAlignment="Top"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📋" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="ИНВЕНТАРИЗАЦИЯ" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBlue}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="(1.8)" 
                               FontSize="12" 
                               Foreground="{StaticResource NeutralGray}"
                               VerticalAlignment="Bottom"
                               Margin="5,0,0,2"/>
                </StackPanel>

                <!-- Панель поиска и фильтров -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <!-- Поле поиска -->
                    <TextBox x:Name="search" 
                             Width="300"
                             Height="38"
                             Padding="12,10"
                             KeyDown="KeyDown_Search">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border x:Name="border" 
                                                    Background="{StaticResource White}" 
                                                    BorderBrush="{StaticResource NeutralGray}" 
                                                    BorderThickness="1"
                                                    CornerRadius="6">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                  VerticalAlignment="Center"
                                                                  HorizontalScrollBarVisibility="Hidden"/>
                                                    <TextBlock Text="Поиск по названию инвентаризации..." 
                                                               Foreground="{StaticResource NeutralGray}"
                                                               Margin="12,0"
                                                               VerticalAlignment="Center"
                                                               IsHitTestVisible="False"
                                                               Visibility="Collapsed">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Кнопки сортировки -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="btnSortUp"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▲"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Click="SortUp"
                                ToolTip="Сортировка по дате начала"/>

                        <Button x:Name="btnSortDown"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="▼"
                                Width="40"
                                Height="38"
                                FontSize="16"
                                Margin="5,0,0,0"
                                Click="SortDown"
                                ToolTip="Сортировка по дате окончания"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка "Назад" -->
                <Button Grid.Column="2"
                        Style="{StaticResource BackButtonStyle}"
                        Click="Back"
                        Content="← Назад"
                        Width="100"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,80,20,70">
            <StackPanel x:Name="parent">

                <!-- Активная инвентаризация -->
                <Border Style="{StaticResource InventoryCardStyle}">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                    Orientation="Horizontal" 
                                    Margin="0,0,0,16">
                            <TextBlock Text="Ежегодная инвентаризация оборудования 2023" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGray}"/>

                            <!-- Статус -->
                            <Border Style="{StaticResource StatusTagStyle}"
                                    Background="#E8F5E9">
                                <TextBlock Text="АКТИВНА" 
                                           FontSize="12" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource InventoryActiveColor}"/>
                            </Border>
                        </StackPanel>

                        <Border Grid.Row="1" Style="{StaticResource ActiveInventoryStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Информация об инвентаризации -->
                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="Период: " 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="01.11.2023 - 30.11.2023" 
                                                   FontSize="14" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource DarkGray}"/>

                                        <TextBlock Text=" • " 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="10,0,10,0"/>

                                        <TextBlock Text="Осталось дней: " 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="5" 
                                                   FontSize="14" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource InventoryActiveColor}"/>
                                    </StackPanel>

                                    <!-- Прогресс инвентаризации -->
                                    <StackPanel Margin="0,0,0,12">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <TextBlock Text="Прогресс: " 
                                                       FontSize="14" 
                                                       Foreground="{StaticResource NeutralGray}"
                                                       Margin="0,0,5,0"/>
                                            <TextBlock Text="65%" 
                                                       FontSize="14" 
                                                       FontWeight="Medium"
                                                       Foreground="{StaticResource PrimaryBlue}"/>
                                        </StackPanel>

                                        <ProgressBar Style="{StaticResource ProgressBarStyle}"
                                                     Value="65"
                                                     Maximum="100"
                                                     Margin="0,0,0,8"/>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Проверено: " 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource NeutralGray}"
                                                       Margin="0,0,5,0"/>
                                            <TextBlock Text="130 из 200" 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource DarkGray}"/>

                                            <TextBlock Text=" единиц оборудования" 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource NeutralGray}"
                                                       Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Участники -->
                                    <StackPanel>
                                        <TextBlock Text="Участники инвентаризации:" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,0,6"/>

                                        <WrapPanel>
                                            <Border Background="{StaticResource HoverBlue}"
                                                    CornerRadius="12"
                                                    Padding="6,3"
                                                    Margin="0,0,6,6">
                                                <TextBlock Text="Иванов И.И. (15 ед.)" 
                                                           FontSize="12"/>
                                            </Border>
                                            <Border Background="{StaticResource HoverBlue}"
                                                    CornerRadius="12"
                                                    Padding="6,3"
                                                    Margin="0,0,6,6">
                                                <TextBlock Text="Петров П.П. (28 ед.)" 
                                                           FontSize="12"/>
                                            </Border>
                                            <Border Background="{StaticResource HoverBlue}"
                                                    CornerRadius="12"
                                                    Padding="6,3"
                                                    Margin="0,0,6,6">
                                                <TextBlock Text="Сидоров С.С. (42 ед.)" 
                                                           FontSize="12"/>
                                            </Border>
                                            <Border Background="{StaticResource HoverBlue}"
                                                    CornerRadius="12"
                                                    Padding="6,3"
                                                    Margin="0,0,6,6">
                                                <TextBlock Text="+ 7 сотрудников" 
                                                           FontSize="12"/>
                                            </Border>
                                        </WrapPanel>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Кнопки действий -->
                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            Margin="20,0,0,0">
                                    <Button Style="{StaticResource PrimaryButtonStyle}"
                                            Content="Продолжить"
                                            Width="140"
                                            Height="38"
                                            Margin="0,0,0,8"/>

                                    <Button Style="{StaticResource SecondaryButtonStyle}"
                                            Content="Отчет"
                                            Width="140"
                                            Height="38"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Запланированная инвентаризация -->
                <Border Style="{StaticResource InventoryCardStyle}">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                    Orientation="Horizontal" 
                                    Margin="0,0,0,16">
                            <TextBlock Text="Инвентаризация компьютерных классов" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGray}"/>

                            <Border Style="{StaticResource StatusTagStyle}"
                                    Background="#FFF3E0">
                                <TextBlock Text="ЗАПЛАНИРОВАНА" 
                                           FontSize="12" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource InventoryPlannedColor}"/>
                            </Border>
                        </StackPanel>

                        <Border Grid.Row="1" Style="{StaticResource PlannedInventoryStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="Период: " 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="01.12.2023 - 15.12.2023" 
                                                   FontSize="14" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource DarkGray}"/>

                                        <TextBlock Text=" • " 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="10,0,10,0"/>

                                        <TextBlock Text="Начинается через: " 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="6 дней" 
                                                   FontSize="14" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource InventoryPlannedColor}"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="Оборудование для проверки:" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,0,6"/>

                                        <TextBlock Text="• Компьютерные классы №205, №301, №402" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource DarkGray}"
                                                   Margin="0,0,0,2"/>
                                        <TextBlock Text="• 75 единиц компьютерной техники" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource DarkGray}"
                                                   Margin="0,0,0,2"/>
                                        <TextBlock Text="• Сетевое оборудование и расходные материалы" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource DarkGray}"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="Ответственный: " 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="Кузнецов К.К." 
                                                   FontSize="13" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource DarkGray}"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            Margin="20,0,0,0">
                                    <Button Style="{StaticResource PrimaryButtonStyle}"
                                            Content="Подготовить"
                                            Width="140"
                                            Height="38"
                                            Margin="0,0,0,8"/>

                                    <Button Style="{StaticResource SecondaryButtonStyle}"
                                            Content="Редактировать"
                                            Width="140"
                                            Height="38"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Завершенная инвентаризация -->
                <Border Style="{StaticResource InventoryCardStyle}">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                    Orientation="Horizontal" 
                                    Margin="0,0,0,16">
                            <TextBlock Text="Внеплановая проверка аудиторий" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DarkGray}"/>

                            <Border Style="{StaticResource StatusTagStyle}"
                                    Background="#E3F2FD">
                                <TextBlock Text="ЗАВЕРШЕНА" 
                                           FontSize="12" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource InventoryCompletedColor}"/>
                            </Border>
                        </StackPanel>

                        <Border Grid.Row="1" Style="{StaticResource CompletedInventoryStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="Период: " 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="15.09.2023 - 30.09.2023" 
                                                   FontSize="14" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource DarkGray}"/>

                                        <TextBlock Text=" • " 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="10,0,10,0"/>

                                        <TextBlock Text="Результат: " 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="Успешно завершена" 
                                                   FontSize="14" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource InventoryCompletedColor}"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="Итоги инвентаризации:" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,0,6"/>

                                        <TextBlock Text="• Проверено 45 аудиторий" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource DarkGray}"
                                                   Margin="0,0,0,2"/>
                                        <TextBlock Text="• Обнаружено 3 расхождения" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource DarkGray}"
                                                   Margin="0,0,0,2"/>
                                        <TextBlock Text="• Составлено 2 акта недостачи" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource DarkGray}"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="Комментарий: " 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource NeutralGray}"
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="Все расхождения устранены, акты подписаны" 
                                                   FontSize="13" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource DarkGray}"
                                                   FontStyle="Italic"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            Margin="20,0,0,0">
                                    <Button Style="{StaticResource PrimaryButtonStyle}"
                                            Content="Отчет PDF"
                                            Width="140"
                                            Height="38"
                                            Margin="0,0,0,8"/>

                                    <Button Style="{StaticResource SecondaryButtonStyle}"
                                            Content="Архивировать"
                                            Width="140"
                                            Height="38"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель с информацией -->
        <Border Background="{StaticResource White}" 
                Height="60" 
                VerticalAlignment="Bottom"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,1,0,0">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о количестве -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Всего инвентаризаций:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="3" 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Активных:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="1" 
                               FontWeight="Medium"
                               Foreground="{StaticResource InventoryActiveColor}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Запланированных:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="1" 
                               FontWeight="Medium"
                               Foreground="{StaticResource InventoryPlannedColor}"/>
                </StackPanel>

                <!-- Кнопка добавления -->
                <Button Grid.Column="1"
                        x:Name="addBtn"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Add"
                        Content="+ Новая инвентаризация"
                        Width="200"
                        Height="38"
                        Visibility="Hidden"/>
            </Grid>
        </Border>

        <!-- Сообщение при пустом списке -->
        <Border x:Name="emptyMessage"
                Visibility="Collapsed"
                Background="{StaticResource White}"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="280">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="20">

                <TextBlock Text="📋" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Инвентаризация оборудования" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkGray}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Планируйте и проводите инвентаризацию оборудования учебного заведения." 
                           FontSize="13" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Процесс по ТЗ: 1) Администратор задает даты и оборудование, 2) Сотрудники проводят проверку, 3) Оставляют комментарии" 
                           FontSize="12" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           FontStyle="Italic"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Создать первую инвентаризацию"
                        Width="220"
                        Height="38"
                        Margin="0,10,0,0"
                        Click="Add"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
