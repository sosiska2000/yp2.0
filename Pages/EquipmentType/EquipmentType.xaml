<Page x:Class="EquipmentManagement.Client.Pages.EquipmentType.EquipmentType"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentManagement.Client.Pages.EquipmentType"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Типы оборудования">

    <Page.Resources>
        <!-- Цветовая палитра по ТЗ -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0060AC"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E41613"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#9EA1A2"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="White" Color="White"/>
        <SolidColorBrush x:Key="DarkGray" Color="#333333"/>
        <SolidColorBrush x:Key="HoverBlue" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA"/>

        <!-- Стиль основной кнопки -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0077CC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль вторичной кнопки -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        </Style>

        <!-- Стиль кнопки "Назад" -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Стиль для поля поиска -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"/>
                                <TextBlock Text="Поиск по названию типа..." 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="12,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек типов оборудования -->
        <Style x:Key="EquipmentTypeCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeutralGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Стиль для тегов количества оборудования -->
        <Style x:Key="EquipmentCountTagStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource HoverBlue}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Стиль для иконок типов оборудования -->
        <Style x:Key="TypeIconStyle" TargetType="Border">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <!-- Верхняя панель -->
        <Border Background="{StaticResource White}" 
                Height="70" 
                VerticalAlignment="Top"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,0,0,1">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="ТИПЫ ОБОРУДОВАНИЯ" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBlue}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="(1.4)" 
                               FontSize="12" 
                               Foreground="{StaticResource NeutralGray}"
                               VerticalAlignment="Bottom"
                               Margin="5,0,0,2"/>
                </StackPanel>

                <!-- Панель поиска -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <!-- Поле поиска -->
                    <TextBox x:Name="search" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             Width="300"
                             Height="38"
                             KeyDown="KeyDown_Search"/>
                </StackPanel>

                <!-- Кнопка "Назад" -->
                <Button Grid.Column="2"
                        Style="{StaticResource BackButtonStyle}"
                        Click="Back"
                        Content="← Назад"
                        Width="100"
                        Height="38"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Margin="20,80,20,70">
            <StackPanel x:Name="parent">

                <!-- Примеры типов оборудования из ТЗ -->

                <!-- Тип: Монитор -->
                <Border Style="{StaticResource EquipmentTypeCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Иконка типа -->
                        <Border Grid.Column="0" 
                                Style="{StaticResource TypeIconStyle}"
                                Background="#2196F3">
                            <TextBlock Text="🖥️" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Информация о типе -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Монитор" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Устройство отображения визуальной информации" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Количество оборудования и действия -->
                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <Border Style="{StaticResource EquipmentCountTagStyle}">
                                <TextBlock Text="25 ед. оборудования" 
                                           FontSize="12"/>
                            </Border>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="✏️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="10,0,0,0"
                                    ToolTip="Редактировать"
                                    Click="Edit_Click"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="🗑️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="5,0,0,0"
                                    ToolTip="Удалить"
                                    Click="Delete_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Тип: Системный блок -->
                <Border Style="{StaticResource EquipmentTypeCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Style="{StaticResource TypeIconStyle}"
                                Background="#4CAF50">
                            <TextBlock Text="💻" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Системный блок" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Основной компонент компьютерной системы" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <Border Style="{StaticResource EquipmentCountTagStyle}">
                                <TextBlock Text="18 ед. оборудования" 
                                           FontSize="12"/>
                            </Border>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="✏️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="10,0,0,0"
                                    ToolTip="Редактировать"
                                    Click="Edit_Click"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="🗑️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="5,0,0,0"
                                    ToolTip="Удалить"
                                    Click="Delete_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Тип: Принтер -->
                <Border Style="{StaticResource EquipmentTypeCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Style="{StaticResource TypeIconStyle}"
                                Background="#FF9800">
                            <TextBlock Text="🖨️" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Принтер" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Устройство для печати документов" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <Border Style="{StaticResource EquipmentCountTagStyle}">
                                <TextBlock Text="12 ед. оборудования" 
                                           FontSize="12"/>
                            </Border>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="✏️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="10,0,0,0"
                                    ToolTip="Редактировать"
                                    Click="Edit_Click"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="🗑️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="5,0,0,0"
                                    ToolTip="Удалить"
                                    Click="Delete_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Тип: Ноутбук -->
                <Border Style="{StaticResource EquipmentTypeCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Style="{StaticResource TypeIconStyle}"
                                Background="#9C27B0">
                            <TextBlock Text="💼" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Ноутбук" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Портативный персональный компьютер" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <Border Style="{StaticResource EquipmentCountTagStyle}">
                                <TextBlock Text="30 ед. оборудования" 
                                           FontSize="12"/>
                            </Border>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="✏️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="10,0,0,0"
                                    ToolTip="Редактировать"
                                    Click="Edit_Click"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="🗑️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="5,0,0,0"
                                    ToolTip="Удалить"
                                    Click="Delete_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Тип: Сетевое оборудование -->
                <Border Style="{StaticResource EquipmentTypeCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Style="{StaticResource TypeIconStyle}"
                                Background="#607D8B">
                            <TextBlock Text="🌐" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Сетевое оборудование" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DarkGray}"
                                       Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание: " 
                                           FontSize="13" 
                                           Foreground="{StaticResource NeutralGray}"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Маршрутизаторы, коммутаторы, точки доступа" 
                                           FontSize="13" 
                                           Foreground="{StaticResource DarkGray}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <Border Style="{StaticResource EquipmentCountTagStyle}">
                                <TextBlock Text="8 ед. оборудования" 
                                           FontSize="12"/>
                            </Border>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="✏️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="10,0,0,0"
                                    ToolTip="Редактировать"
                                    Click="Edit_Click"/>

                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Content="🗑️"
                                    Width="32"
                                    Height="32"
                                    FontSize="14"
                                    Margin="5,0,0,0"
                                    ToolTip="Удалить"
                                    Click="Delete_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель с информацией -->
        <Border Background="{StaticResource White}" 
                Height="60" 
                VerticalAlignment="Bottom"
                BorderBrush="{StaticResource NeutralGray}"
                BorderThickness="0,1,0,0">

            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о количестве -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Всего типов оборудования:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="5" 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Оборудование в типах:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="93 ед." 
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBlue}"/>

                    <TextBlock Text="•" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="10,0,5,0"/>

                    <TextBlock Text="Самый популярный:" 
                               Foreground="{StaticResource NeutralGray}"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="Ноутбук (30 ед.)" 
                               FontWeight="Medium"
                               Foreground="#9C27B0"/>
                </StackPanel>

                <!-- Кнопка добавления -->
                <Button Grid.Column="1"
                        x:Name="addBtn"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Add"
                        Content="+ Добавить тип"
                        Width="140"
                        Height="38"
                        Visibility="Hidden"/>
            </Grid>
        </Border>

        <!-- Сообщение при пустом списке -->
        <Border x:Name="emptyMessage"
                Visibility="Collapsed"
                Background="{StaticResource White}"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="250">

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="20">

                <TextBlock Text="📦" 
                           FontSize="40" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Типы оборудования" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkGray}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Добавьте типы оборудования для классификации и сортировки." 
                           FontSize="13" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Примеры из ТЗ: монитор, системный блок, принтер" 
                           FontSize="12" 
                           Foreground="{StaticResource NeutralGray}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           FontStyle="Italic"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Добавить первый тип"
                        Width="180"
                        Height="38"
                        Margin="0,20,0,0"
                        Click="Add"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
