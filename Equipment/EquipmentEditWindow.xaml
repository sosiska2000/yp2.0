<Window x:Class="EquipmentManagement.Client.Equipment.EquipmentEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentManagement.Client.Equipment"
        mc:Ignorable="d"
         Title="Добавление оборудования"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0"
                Background="#FF0060AC"
                Height="60"
                Padding="15">
            <TextBlock x:Name="WindowTitle"
                       Text="Добавление нового оборудования"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Основной контент с вкладками -->
        <TabControl Grid.Row="1"
                    Margin="20">

            <!-- Вкладка 1: Основное -->
            <TabItem Header="Основное">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">

                        <!-- Название -->
                        <TextBlock Text="Название оборудования:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="NameTextBox"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10"
                                 Margin="0,0,0,15"/>

                        <!-- Инвентарный номер -->
                        <TextBlock Text="Инвентарный номер:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="InventoryNumberTextBox"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10"
                                 Margin="0,0,0,15"/>

                        <!-- Фото -->
                        <TextBlock Text="Фото оборудования:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Превью фото -->
                            <Border Grid.Column="0"
                                    Width="150"
                                    Height="100"
                                    Background="#F5F5F5"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                <Image x:Name="PhotoImage"
                                       Stretch="Uniform"/>
                            </Border>

                            <!-- Кнопки -->
                            <StackPanel Grid.Column="1"
                                        Margin="20,0,0,0">
                                <Button x:Name="SelectPhotoButton"
                                        Content="Выбрать фото"
                                        Width="120"
                                        Height="30"
                                        Background="#FF0060AC"
                                        Foreground="White"
                                        Cursor="Hand"
                                        Click="SelectPhotoButton_Click"
                                        Margin="0,0,0,10"/>

                                <Button x:Name="ClearPhotoButton"
                                        Content="Удалить фото"
                                        Width="120"
                                        Height="30"
                                        Background="Transparent"
                                        BorderBrush="#FF0060AC"
                                        BorderThickness="1"
                                        Foreground="#FF0060AC"
                                        Cursor="Hand"
                                        Click="ClearPhotoButton_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Аудитория -->
                        <TextBlock Text="Аудитория:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="RoomComboBox"
                                  Height="35"
                                  FontSize="14"
                                  Padding="5"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Аудитория 101"/>
                            <ComboBoxItem Content="Аудитория 102"/>
                            <ComboBoxItem Content="Аудитория 103"/>
                            <ComboBoxItem Content="Лаборатория 201"/>
                            <ComboBoxItem Content="Кабинет 301"/>
                        </ComboBox>

                        <!-- Ответственный -->
                        <TextBlock Text="Ответственный пользователь:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="ResponsibleComboBox"
                                  Height="35"
                                  FontSize="14"
                                  Padding="5"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Иванов И.И."/>
                            <ComboBoxItem Content="Петров П.П."/>
                            <ComboBoxItem Content="Сидоров С.С."/>
                            <ComboBoxItem Content="Кузнецов К.К."/>
                        </ComboBox>

                        <!-- Стоимость -->
                        <TextBlock Text="Стоимость (руб.):"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="CostTextBox"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10"
                                 Margin="0,0,0,15"/>

                        <!-- Направление -->
                        <TextBlock Text="Направление:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="DirectionComboBox"
                                  Height="35"
                                  FontSize="14"
                                  Padding="5"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Мехатроника"/>
                            <ComboBoxItem Content="WSR2022"/>
                            <ComboBoxItem Content="Основной фонд"/>
                            <ComboBoxItem Content="Спецпроект"/>
                        </ComboBox>

                        <!-- Статус -->
                        <TextBlock Text="Статус:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="StatusComboBox"
                                  Height="35"
                                  FontSize="14"
                                  Padding="5"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Используется"/>
                            <ComboBoxItem Content="На ремонте"/>
                            <ComboBoxItem Content="Сломано"/>
                            <ComboBoxItem Content="На выдаче"/>
                            <ComboBoxItem Content="В резерве"/>
                        </ComboBox>

                        <!-- Тип оборудования -->
                        <TextBlock Text="Тип оборудования:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="TypeComboBox"
                                  Height="35"
                                  FontSize="14"
                                  Padding="5"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Ноутбук"/>
                            <ComboBoxItem Content="Системный блок"/>
                            <ComboBoxItem Content="Монитор"/>
                            <ComboBoxItem Content="Принтер"/>
                            <ComboBoxItem Content="Проектор"/>
                            <ComboBoxItem Content="ИБП"/>
                        </ComboBox>

                        <!-- Модель -->
                        <TextBlock Text="Модель:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="ModelTextBox"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10"
                                 Margin="0,0,0,15"/>

                        <!-- Комментарий -->
                        <TextBlock Text="Комментарий:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="CommentTextBox"
                                 Height="100"
                                 FontSize="14"
                                 Padding="10"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка 2: Сетевые настройки -->
            <TabItem Header="Сетевые настройки">
                <StackPanel Margin="20">
                    <TextBlock Text="Настройки сети (если применимо):"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>

                    <!-- IP-адрес -->
                    <TextBlock Text="IP-адрес:"
                               FontSize="13"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="IpAddressTextBox"
                             Height="35"
                             FontSize="14"
                             Padding="10"
                             Margin="0,0,0,15"/>

                    <!-- Маска подсети -->
                    <TextBlock Text="Маска подсети:"
                               FontSize="13"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="SubnetMaskTextBox"
                             Height="35"
                             FontSize="14"
                             Padding="10"
                             Margin="0,0,0,15"/>

                    <!-- Шлюз -->
                    <TextBlock Text="Основной шлюз:"
                               FontSize="13"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="GatewayTextBox"
                             Height="35"
                             FontSize="14"
                             Padding="10"
                             Margin="0,0,0,15"/>

                    <!-- DNS-серверы -->
                    <TextBlock Text="DNS-серверы:"
                               FontSize="13"
                               Margin="0,0,0,5"/>
                    <StackPanel>
                        <TextBox x:Name="Dns1TextBox"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="Dns2TextBox"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10"
                                 Margin="0,0,0,15"/>
                    </StackPanel>

                    <Button x:Name="CheckNetworkButton"
                            Content="Проверить доступность"
                            Width="180"
                            Height="35"
                            Background="#FF0060AC"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CheckNetworkButton_Click"/>
                </StackPanel>
            </TabItem>

        </TabControl>

        <!-- Кнопки сохранения/отмены -->
        <Border Grid.Row="2"
                Background="#F5F5F5"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="ErrorText"
                           Text=""
                           Foreground="Red"
                           FontSize="13"
                           VerticalAlignment="Center"/>

                <!-- Кнопка Отмена -->
                <Button x:Name="CancelButton"
                        Grid.Column="1"
                        Content="Отмена"
                        Width="100"
                        Height="35"
                        Background="Transparent"
                        BorderBrush="#FF0060AC"
                        BorderThickness="1"
                        Foreground="#FF0060AC"
                        Cursor="Hand"
                        Click="CancelButton_Click"
                        Margin="0,0,10,0"/>

                <!-- Кнопка Сохранить -->
                <Button x:Name="SaveButton"
                        Grid.Column="2"
                        Content="Сохранить"
                        Width="100"
                        Height="35"
                        Background="#FF0060AC"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="SaveButton_Click"/>

            </Grid>
        </Border>

    </Grid>
</Window>
