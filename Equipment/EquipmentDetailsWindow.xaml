<Window x:Class="EquipmentManagement.Client.Equipment.EquipmentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentManagement.Client.Equipment"
        mc:Ignorable="d"
         Title="Детали оборудования"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0"
                Background="#FF0060AC"
                Height="60"
                Padding="15">
            <TextBlock x:Name="TitleText"
                       Text="Детали оборудования"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Фото -->
                <Border Grid.Column="0"
                        Width="180"
                        Height="120"
                        Background="#F5F5F5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="0,0,20,0">
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="🖼️"
                                   FontSize="40"
                                   Foreground="#CCCCCC"/>
                        <TextBlock Text="Нет фото"
                                   FontSize="12"
                                   Foreground="#999999"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Информация -->
                <StackPanel Grid.Column="1">

                    <!-- Основная информация -->
                    <TextBlock x:Name="EquipmentName"
                               Text="Ноутбук Dell T200"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Инвентарный номер -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Инвентарный номер:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   x:Name="InventoryNumberText"
                                   Text="12345"
                                   Margin="0,0,0,10"/>

                        <!-- Аудитория -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Аудитория:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   x:Name="RoomText"
                                   Text="Аудитория 101"
                                   Margin="0,0,0,10"/>

                        <!-- Ответственный -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Ответственный:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                   x:Name="ResponsibleText"
                                   Text="Иванов И.И."
                                   Margin="0,0,0,10"/>

                        <!-- Статус -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Статус:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <Border Grid.Row="3" Grid.Column="1"
                                Background="#4CAF50"
                                CornerRadius="10"
                                Padding="5,2"
                                HorizontalAlignment="Left">
                            <TextBlock x:Name="StatusText"
                                       Text="Используется"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="12"/>
                        </Border>

                        <!-- Стоимость -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="Стоимость:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="4" Grid.Column="1"
                                   x:Name="CostText"
                                   Text="45 000 руб."
                                   Margin="0,0,0,10"/>

                        <!-- Направление -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                   Text="Направление:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="5" Grid.Column="1"
                                   x:Name="DirectionText"
                                   Text="Мехатроника"
                                   Margin="0,0,0,10"/>

                    </Grid>

                    <!-- Комментарий -->
                    <Border Background="#F9F9F9"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="10"
                            Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="Комментарий:"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="CommentText"
                                       Text="Оборудование используется для проведения лабораторных работ по мехатронике. Установлено специализированное ПО."
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                </StackPanel>

            </Grid>

        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2"
                Background="#F5F5F5"
                Padding="15">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="EditButton"
                        Content="✏️ Редактировать"
                        Width="140"
                        Height="35"
                        Background="#FF0060AC"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="EditButton_Click"
                        Margin="0,0,10,0"/>

                <Button x:Name="CloseButton"
                        Content="Закрыть"
                        Width="100"
                        Height="35"
                        Background="Transparent"
                        BorderBrush="#FF0060AC"
                        BorderThickness="1"
                        Foreground="#FF0060AC"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
