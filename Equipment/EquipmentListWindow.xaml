<Window x:Class="EquipmentManagement.Client.Equipment.EquipmentListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentManagement.Client.Equipment"
        mc:Ignorable="d"
        Title="Список оборудования"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Панель инструментов -->
        <DockPanel>
            <Border DockPanel.Dock="Top"
                    Background="#FF0060AC"
                    Height="50"
                    Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Grid.Column="0"
                               Text="📦 Оборудование"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <!-- Поиск -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="Поиск:"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBox x:Name="SearchTextBox"
                                 Width="300"
                                 Height="30"
                                 Padding="5"
                                 FontSize="14"
                                 TextChanged="SearchTextBox_TextChanged"/>
                    </StackPanel>

                    <!-- Кнопки -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Button x:Name="AddButton"
                                Content="➕ Добавить"
                                Width="120"
                                Height="30"
                                Background="White"
                                Foreground="#FF0060AC"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="AddButton_Click"
                                Margin="0,0,10,0"/>

                        <Button x:Name="RefreshButton"
                                Content="🔄 Обновить"
                                Width="120"
                                Height="30"
                                Background="Transparent"
                                BorderBrush="White"
                                BorderThickness="1"
                                Foreground="White"
                                Cursor="Hand"
                                Click="RefreshButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <Grid>
                <!-- Таблица оборудования -->
                <DataGrid x:Name="EquipmentGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="EquipmentGrid_SelectionChanged"
                          Margin="10">

                    <DataGrid.Columns>
                        <!-- Фото -->
                        <DataGridTemplateColumn Header="Фото" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="60" 
                                            Height="40" 
                                            Background="#F5F5F5"
                                            CornerRadius="3"
                                            Margin="2">
                                        <TextBlock Text="🖼️"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="16"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Название -->
                        <DataGridTextColumn Header="Название" 
                                            Binding="{Binding Name}"
                                            Width="200"/>

                        <!-- Инвентарный номер -->
                        <DataGridTextColumn Header="Инв. номер" 
                                            Binding="{Binding InventoryNumber}"
                                            Width="120"/>

                        <!-- Аудитория -->
                        <DataGridTextColumn Header="Аудитория" 
                                            Binding="{Binding Room}"
                                            Width="120"/>

                        <!-- Статус -->
                        <DataGridTemplateColumn Header="Статус" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding StatusColor}"
                                            CornerRadius="10"
                                            Padding="5,2"
                                            HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Status}"
                                                   Foreground="White"
                                                   FontWeight="SemiBold"
                                                   FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Ответственный -->
                        <DataGridTextColumn Header="Ответственный" 
                                            Binding="{Binding Responsible}"
                                            Width="150"/>

                        <!-- Стоимость -->
                        <DataGridTextColumn Header="Стоимость" 
                                            Binding="{Binding Cost, StringFormat={}{0:N0} руб.}"
                                            Width="100"/>

                        <!-- Действия -->
                        <DataGridTemplateColumn Header="Действия" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="✏️"
                                                Width="30"
                                                Height="30"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="EditButton_Click"
                                                Tag="{Binding Id}"/>

                                        <Button Content="👁️"
                                                Width="30"
                                                Height="30"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="ViewButton_Click"
                                                Tag="{Binding Id}"
                                                Margin="5,0,0,0"/>

                                        <Button Content="🗑️"
                                                Width="30"
                                                Height="30"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="Red"
                                                Cursor="Hand"
                                                Click="DeleteButton_Click"
                                                Tag="{Binding Id}"
                                                Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </DockPanel>

        <!-- Статус бар -->
        <Border VerticalAlignment="Bottom"
                Background="#F5F5F5"
                Height="30">
            <TextBlock x:Name="StatusText"
                       Text="Всего: 0 записей"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0,0,10,0"
                       FontSize="12"/>
        </Border>

    </Grid>
</Window>
