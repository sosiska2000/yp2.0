<Window x:Class="EquipmentManagement.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentManagement.Client"
        mc:Ignorable="d"
        Title="Вход в систему"
        Height="466"
        Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#FF9EA1A2">
        <TextBlock Text="Система учёта оборудования"
           Foreground="White"
           FontSize="10"
           HorizontalAlignment="Center"
           Margin="0,20,0,410"/>

        <!-- Центральная панель -->
        <Border Background="White"
                Width="300"
                Height="344"
                CornerRadius="10"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Width="250">

                <!-- Заголовок -->
                <TextBlock Text="Вход в систему"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           Foreground="#FF0060AC"/>
                <!-- Синий из ТЗ -->

                <!-- Поле логина -->
                <TextBlock Text="Логин:" 
                           FontSize="14"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="UsernameTextBox"
                         Height="45"
                         FontSize="14"
                         Padding="10"
                         Margin="0,0,0,20"/>

                <!-- Поле пароля -->
                <TextBlock Text="Пароль:" 
                           FontSize="14"
                           Margin="0,0,0,5"/>

                <PasswordBox x:Name="PasswordBox"
                             Height="45"
                             FontSize="14"
                             Padding="10"
                             PasswordChar="*"
                             Margin="0,0,0,20"/>

                <!-- Кнопка входа -->
                <Button x:Name="LoginButton"
                        Content="Войти"
                        Height="40"
                        Width="120"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#FF0060AC" 
                    Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="LoginButton_Click"
                        HorizontalAlignment="Center"/>

                    <!-- Текст ошибки -->
                    <TextBlock x:Name="ErrorText"
                           Foreground="Red"
                           FontSize="12"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>

            </StackPanel>
        </Border>

        <!-- Подвал -->
        
    </Grid>
</Window>
