<Window x:Class="EquipmentManagement.Client.Inventory.InventorySelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentManagement.Client.Inventory"
        mc:Ignorable="d"
        Title="Выбор оборудования - Шаг 2"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка с информацией -->
        <Border Grid.Row="0"
                Background="#FF0060AC"
                Padding="15">
            <StackPanel>
                <TextBlock x:Name="InventoryInfoText"
                           Text="Инвентаризация: Название"
                           FontSize="16"
                           Foreground="White"
                           FontWeight="Bold"/>
                <TextBlock x:Name="DatesText"
                           Text="Период: 01.01.2024 - 07.01.2024"
                           FontSize="13"
                           Foreground="White"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Список всего оборудования -->
            <Border Grid.Column="0"
                    Margin="10"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель поиска -->
                    <Border Grid.Row="0"
                            Background="#F5F5F5"
                            Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Поиск:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <TextBox x:Name="SearchTextBox"
                                     Width="200"
                                     Height="30"
                                     Padding="5"
                                     TextChanged="SearchTextBox_TextChanged"/>
                            <TextBlock x:Name="TotalCountText"
                                       Text="Всего: 0"
                                       VerticalAlignment="Center"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Таблица оборудования -->
                    <DataGrid x:Name="EquipmentDataGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Extended"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Выбрать"
                                                    Binding="{Binding IsSelected}"
                                                    Width="60"/>
                            <DataGridTextColumn Header="Название" 
                                                Binding="{Binding Name}"
                                                Width="200"/>
                            <DataGridTextColumn Header="Инв. номер" 
                                                Binding="{Binding InventoryNumber}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Аудитория" 
                                                Binding="{Binding Room}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Статус" 
                                                Binding="{Binding Status}"
                                                Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Панель выбранного оборудования -->
            <Border Grid.Column="1"
                    Margin="10"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    Background="#F9F9F9">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Выбранное оборудование:"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="10"
                               Foreground="#333333"/>

                    <!-- Список выбранного -->
                    <ListView x:Name="SelectedList"
                              Grid.Row="1"
                              Margin="10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding InventoryNumber}"
                                               FontSize="11"
                                               Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Кнопки управления -->
                    <StackPanel Grid.Row="2"
                                Margin="10">
                        <Button Content="Выбрать всё"
                                Height="30"
                                Background="#FF0060AC"
                                Foreground="White"
                                Cursor="Hand"
                                Click="SelectAllButton_Click"
                                Margin="0,0,0,5"/>

                        <Button Content="Снять выделение"
                                Height="30"
                                Background="Transparent"
                                BorderBrush="#FF0060AC"
                                BorderThickness="1"
                                Foreground="#FF0060AC"
                                Cursor="Hand"
                                Click="ClearSelectionButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Кнопки навигации -->
        <Border Grid.Row="2"
                Background="#F5F5F5"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="SelectedCountText"
                           Text="Выбрано: 0 единиц оборудования"
                           VerticalAlignment="Center"
                           FontSize="13"/>

                <Button x:Name="BackButton"
                        Grid.Column="1"
                        Content="← Назад"
                        Width="100"
                        Height="35"
                        Background="Transparent"
                        BorderBrush="#FF0060AC"
                        BorderThickness="1"
                        Foreground="#FF0060AC"
                        Cursor="Hand"
                        Click="BackButton_Click"
                        Margin="0,0,10,0"/>

                <Button x:Name="StartInventoryButton"
                        Grid.Column="2"
                        Content="Начать инвентаризацию →"
                        Width="180"
                        Height="35"
                        Background="#FF0060AC"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="StartInventoryButton_Click"/>
            </Grid>
        </Border>

    </Grid>
</Window>
