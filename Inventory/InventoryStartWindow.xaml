<Window x:Class="EquipmentManagement.Client.Inventory.InventoryStartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentManagement.Client.Inventory"
        mc:Ignorable="d"
         Title="Создание инвентаризации - Шаг 1"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#FF9EA1A2">
        <Border Background="White"
                Margin="40"
                CornerRadius="10"
                Padding="30">

            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Шаг 1: Основные данные"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#FF0060AC"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Название инвентаризации -->
                <TextBlock Text="Название инвентаризации:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="InventoryNameTextBox"
                         Height="35"
                         FontSize="14"
                         Padding="10"
                         Margin="0,0,0,20"/>

                <!-- Дата начала -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Дата начала:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>

                        <DatePicker x:Name="StartDatePicker"
                                    Height="35"
                                    FontSize="14"
                                    />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="Дата окончания:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>

                        <DatePicker x:Name="EndDatePicker"
                                    Height="35"
                                    FontSize="14"
                                    />
                    </StackPanel>
                </Grid>

                <!-- Выбор типа инвентаризации -->
                <TextBlock Text="Тип инвентаризации:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>

                <StackPanel Margin="0,0,0,20">
                    <RadioButton x:Name="AllEquipmentRadio"
                                 Content="Всё оборудование"
                                 GroupName="InventoryType"
                                 IsChecked="True"
                                 FontSize="14"
                                 Margin="0,5"/>

                    <RadioButton x:Name="SelectedEquipmentRadio"
                                 Content="Выборочное оборудование"
                                 GroupName="InventoryType"
                                 FontSize="14"
                                 Margin="0,5"/>

                    <RadioButton x:Name="ByRoomRadio"
                                 Content="По аудиториям"
                                 GroupName="InventoryType"
                                 FontSize="14"
                                 Margin="0,5"/>
                </StackPanel>

                <!-- Кнопки -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="CancelButton"
                            Content="Отмена"
                            Width="100"
                            Height="35"
                            Background="Transparent"
                            BorderBrush="#FF0060AC"
                            BorderThickness="1"
                            Foreground="#FF0060AC"
                            Cursor="Hand"
                            Click="CancelButton_Click"/>

                    <Button x:Name="NextButton"
                            Grid.Column="1"
                            Content="Далее →"
                            Width="100"
                            Height="35"
                            Background="#FF0060AC"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="NextButton_Click"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
