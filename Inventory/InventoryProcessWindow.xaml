<Window x:Class="EquipmentManagement.Client.Inventory.InventoryProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentManagement.Client.Inventory"
        mc:Ignorable="d"
        Title="Проведение инвентаризации - Шаг 3"
        Height="800"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка с прогрессом -->
        <Border Grid.Row="0"
                Background="#FF0060AC"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock x:Name="InventoryTitleText"
                               Text="Инвентаризация: Название"
                               FontSize="18"
                               Foreground="White"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="UserInfoText"
                               Text="Проверяющий: Администратор"
                               FontSize="14"
                               Foreground="White"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Прогресс -->
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Right">
                    <TextBlock x:Name="ProgressText"
                               Text="Проверено: 0/0"
                               FontSize="14"
                               Foreground="White"
                               HorizontalAlignment="Right"/>
                    <ProgressBar x:Name="ProgressBar"
                                 Width="300"
                                 Height="15"
                                 Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Список оборудования для проверки -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Таблица оборудования -->
            <DataGrid x:Name="InventoryDataGrid"
                      Grid.Column="0"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      Margin="10"
                      SelectionChanged="InventoryDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Найдено"
                                            Binding="{Binding IsFound}"
                                            Width="80"/>
                    <DataGridTextColumn Header="Название" 
                                        Binding="{Binding Name}"
                                        Width="250"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Инв. номер" 
                                        Binding="{Binding InventoryNumber}"
                                        Width="120"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Аудитория" 
                                        Binding="{Binding Room}"
                                        Width="120"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Статус" 
                                        Binding="{Binding Status}"
                                        Width="120"
                                        IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="Комментарий" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalAlignment="Center"
                                         TextWrapping="Wrap"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Панель деталей -->
            <Border Grid.Column="1"
                    Margin="10"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    Background="#F9F9F9"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Информация об оборудовании:"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,20"
                               Foreground="#333333"/>

                    <StackPanel x:Name="DetailsPanel"
                                Visibility="Collapsed">

                        <!-- Фото оборудования -->
                        <Border BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                Background="White"
                                Height="200"
                                Margin="0,0,0,20">
                            <Image x:Name="EquipmentImage"
                                   Stretch="Uniform"/>
                        </Border>

                        <!-- Детали -->
                        <TextBlock x:Name="EquipmentNameText"
                                   Text="Ноутбук Dell T200"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Инвентарный номер:" 
                                       FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="InventoryNumberText" 
                                       Text="12345" Margin="0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Аудитория:" 
                                       FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RoomText" 
                                       Text="Аудитория 101" Margin="0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Ответственный:" 
                                       FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ResponsibleText" 
                                       Text="Иванов И.И." Margin="0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Статус:" 
                                       FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="StatusText" 
                                       Text="Используется" Margin="0,5"/>
                        </Grid>

                        <!-- Кнопки быстрой отметки -->
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="Быстрая отметка:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>

                            <WrapPanel>
                                <Button Content="✅ Найдено"
                                        Width="120"
                                        Height="35"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        Margin="0,0,10,10"
                                        Cursor="Hand"
                                        Click="MarkFoundButton_Click"/>

                                <Button Content="⚠️ С замечаниями"
                                        Width="140"
                                        Height="35"
                                        Background="#FF9800"
                                        Foreground="White"
                                        Margin="0,0,10,10"
                                        Cursor="Hand"
                                        Click="MarkWithCommentsButton_Click"/>

                                <Button Content="❌ Не найдено"
                                        Width="120"
                                        Height="35"
                                        Background="#F44336"
                                        Foreground="White"
                                        Margin="0,0,10,10"
                                        Cursor="Hand"
                                        Click="MarkNotFoundButton_Click"/>
                            </WrapPanel>
                        </StackPanel>

                    </StackPanel>

                    <!-- Сообщение когда ничего не выбрано -->
                    <TextBlock x:Name="NoSelectionText"
                               Text="Выберите оборудование из списка для просмотра деталей"
                               FontSize="14"
                               Foreground="Gray"
                               TextAlignment="Center" Width="318" Height="40"/>

                </StackPanel>
            </Border>
        </Grid>

        <!-- Панель управления -->
        <Border Grid.Row="2"
                Background="#F5F5F5"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>



                <!-- Кнопки управления -->
                <Button x:Name="SaveButton"
                        Grid.Column="1"
                        Content="💾 Сохранить черновик"
                        Width="150"
                        Height="35"
                        Background="Transparent"
                        BorderBrush="#FF0060AC"
                        BorderThickness="1"
                        Foreground="#FF0060AC"
                        Cursor="Hand"
                        Click="SaveButton_Click"
                        Margin="0,0,10,0"/>

                <Button x:Name="CompleteButton"
                        Grid.Column="2"
                        Content="✅ Завершить инвентаризацию"
                        Width="200"
                        Height="35"
                        Background="#FF0060AC"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="CompleteButton_Click"/>

            </Grid>
        </Border>

    </Grid>
</Window>
